<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BA_MobileGPS.Core.Views.ComboboxPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:behaviors="clr-namespace:BA_MobileGPS.Core.Behaviors;assembly=BA_MobileGPS.Core"
    xmlns:i18n="clr-namespace:BA_MobileGPS.Core.Helpers;assembly=BA_MobileGPS.Core"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    Title="{Binding Title}"
    prism:ViewModelLocator.AutowireViewModel="True">
    <ContentPage.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--<SearchBar
                x:Name="txtSearchType"
                Grid.Row="0"
                Placeholder="{i18n:TranslateResource Common_Message_SearchText}"
                SearchCommand="{Binding SearchValueCommmand}"
                SearchCommandParameter="{Binding Text, Source={x:Reference txtSearchType}}"
                Text="{Binding SearchText}">
                <SearchBar.Behaviors>
                    <b:EventToCommandBehavior
                        Command="{Binding SearchValueCommmand}"
                        CommandParameter="{Binding Text, Source={x:Reference txtSearchType}}"
                        EventName="TextChanged" />
                </SearchBar.Behaviors>
            </SearchBar>-->

            <StackLayout Grid.Row="1" Orientation="Vertical">
                <ListView
                    x:Name="listview"
                    behaviors:ItemTappedCommandListView.ItemTappedCommand="{Binding SelectedValueCommand}"
                    HasUnevenRows="False"
                    HorizontalOptions="FillAndExpand"
                    ItemsSource="{Binding DataSearch}"
                    SeparatorVisibility="Default"
                    VerticalOptions="FillAndExpand">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout
                                    Padding="10"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal"
                                    Spacing="10">
                                    <!--<Image
                                        HeightRequest="25"
                                        Source="{Binding FlagPath}"
                                        WidthRequest="25" />-->
                                    <Label Text="{Binding Value}" VerticalOptions="CenterAndExpand" />
                                    <!--<Label
                                        HorizontalOptions="End"
                                        HorizontalTextAlignment="End"
                                        Opacity="0.5"
                                        Text="{Binding DialCode}"
                                        VerticalOptions="Center" />-->
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>