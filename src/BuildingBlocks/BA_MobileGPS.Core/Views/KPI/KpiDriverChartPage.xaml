                                        Orientation="Horizontal"
                                        VerticalOptions="Center">
                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding PushToFromDatePageCommand}" />
                                        </StackLayout.GestureRecognizers>
                                        <Entry
