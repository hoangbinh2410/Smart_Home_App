                                                    Grid.Column="3"
                                                    HorizontalOptions="CenterAndExpand"
                                                    HorizontalTextAlignment="Start"
                                                    LineBreakMode="WordWrap"
                                                    Text="Điểm"
                                                    VerticalOptions="Center" />
                                                <Label
