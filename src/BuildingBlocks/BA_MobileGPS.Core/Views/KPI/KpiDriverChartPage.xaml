                                                                <Label
                                                                    Grid.Column="2"
                                                                    HorizontalOptions="CenterAndExpand"
                                                                    HorizontalTextAlignment="Start"
                                                                    LineBreakMode="WordWrap"
                                                                    Text="{Binding Value}"
                                                                    VerticalOptions="Center" />

                                                                <Label
