                                        Grid.Row="0"
                                        Padding="0"
                                        BackgroundColor="#F7F7FA"
                                        CornerRadius="5"
                                        HorizontalOptions="FillAndExpand">
                                        <pancake:PancakeView.Border>
                                            <pancake:Border Thickness="1" Color="#CED6E0" />
                                        </pancake:PancakeView.Border>
                                        <Grid RowDefinitions="Auto,*,Auto,Auto">
                                            <Grid
                                                Grid.Row="0"
                                                Padding="10"
                                                BackgroundColor="#F7F7FA"
