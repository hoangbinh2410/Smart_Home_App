                                                <Label
                                                    Grid.Column="2"
                                                    HorizontalOptions="CenterAndExpand"
                                                    HorizontalTextAlignment="Start"
                                                    LineBreakMode="WordWrap"
                                                    Text="Kết quả"
                                                    VerticalOptions="Center" />

