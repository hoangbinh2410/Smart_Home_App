<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="BA_MobileGPS.Core.Views.Account"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:BA_MobileGPS.Core.Controls"
    xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:fontawesome="clr-namespace:FontAwesome;assembly=BA_MobileGPS.Utilities"
    xmlns:prism="http://prismlibrary.com"
    xmlns:sfavatar="clr-namespace:Syncfusion.XForms.AvatarView;assembly=Syncfusion.Core.XForms"
    xmlns:sh="clr-namespace:Sharpnado.Shades;assembly=Sharpnado.Shadows"
    xmlns:sharpnado="clr-namespace:Sharpnado.MaterialFrame;assembly=Sharpnado.MaterialFrame"
    xmlns:syncfusion="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms">
    <ContentView.Resources>
        <Style TargetType="Label">
            <Setter Property="Grid.Column" Value="1" />
            <Setter Property="VerticalOptions" Value="CenterAndExpand" />
            <Setter Property="HorizontalOptions" Value="StartAndExpand" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
        </Style>
        <Style TargetType="controls:IconView">
            <Setter Property="Foreground" Value="{AppThemeBinding Light={StaticResource PrimaryColor}, Dark={StaticResource PrimaryColor}}" />
            <Setter Property="VerticalOptions" Value="Center" />
        </Style>
    </ContentView.Resources>
    <Grid RowDefinitions=".4*,*,Auto">
        <ff:CachedImage
            Aspect="AspectFill"
            HeightRequest="150"
            StyleClass="HomePageTopImage"
            VerticalOptions="StartAndExpand" />
        <StackLayout
            Margin="10,0"
            HorizontalOptions="FillAndExpand"
            Orientation="Horizontal"
            Spacing="10"
            VerticalOptions="CenterAndExpand">
            <Grid
                HeightRequest="80"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="80">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding PushToProfileCommand}" NumberOfTapsRequired="1"/>
                </Grid.GestureRecognizers>
                <sfavatar:SfAvatarView
                    AvatarColorMode="DarkBackground"
                    AvatarName="{Binding UserInfo.FullName}"
                    AvatarShape="Square"
                    BorderColor="White"
                    ContentType="Default"
                    HeightRequest="70"
                    HorizontalOptions="Center"
                    ImageSource="{Binding UserInfo.AvatarUrl, Converter={StaticResource AddRootImageConverter}}"
                    VerticalOptions="Center"
                    WidthRequest="70" />
                <Frame
                    Margin="5"
                    Padding="2"
                    BackgroundColor="WhiteSmoke"
                    BorderColor="Black"
                    HasShadow="False"
                    HeightRequest="15"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    WidthRequest="15">
                    <controls:FontAwesomeIcon
                        FontSize="10"
                        HorizontalOptions="Center"
                        Text="{x:Static fontawesome:FontAwesomeIcons.UserEdit}"
                        VerticalOptions="Center" />
                </Frame>
            </Grid>
            <StackLayout Spacing="0" VerticalOptions="CenterAndExpand">
                <Label LineBreakMode="WordWrap" Text="{Binding UserInfo.FullName}" />
                <Label Text="ABC" />
            </StackLayout>

        </StackLayout>
        <syncfusion:SfListView
            Grid.Row="1"
            Padding="10,0"
            BackgroundColor="Transparent"
            ItemSpacing="5"
            ItemsSource="{Binding MenuItems, Mode=OneWay}"
            SelectionBackgroundColor="Transparent"
            TapCommand="{Binding NavigateCommand}">
            <syncfusion:SfListView.ItemTemplate>
                <DataTemplate>
                    <Grid
                        ColumnDefinitions="Auto,*"
                        ColumnSpacing="20"
                        RowDefinitions="*,1"
                        RowSpacing="5">
                        <controls:IconView
                            HeightRequest="30"
                            Source="{Binding Icon}"
                            WidthRequest="30" />
                        <Label Grid.Column="1" Text="{Binding Title}" />
                        <BoxView
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            StyleClass="AccountLine"
                            VerticalOptions="CenterAndExpand" />
                    </Grid>
                </DataTemplate>
            </syncfusion:SfListView.ItemTemplate>
        </syncfusion:SfListView>
    </Grid>
</ContentView>