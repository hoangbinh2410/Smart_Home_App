                                        <StackLayout
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Padding="0,10,0,10"
                                            HorizontalOptions="FillAndExpand"
                                            Orientation="Horizontal">
                                            <controls:IconView
                                                Foreground="{StaticResource PrimaryColor}"
                                                HeightRequest="20"
                                                HorizontalOptions="Center"
                                                Source="ic_turnon_time_on_day.png"
                                                VerticalOptions="Center"
                                                WidthRequest="20" />

                                            <Label
                                                Text="{i18n:TranslateResource DetailVehicle_Label_MinutesOfDrivingTimeInDay}"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />
                                        </StackLayout>

                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalOptions="EndAndExpand"
                                            Text="{Binding InforDetail.VehicleHtn.MinutesOfDrivingTimeInDay, Converter={StaticResource MinutesOfDrivingTimeConverter}}"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center" />

                                        <BoxView
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            BackgroundColor="{StaticResource GrayColor}"
                                            HeightRequest="0.5"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="Start" />
                                    </Grid>

                                    <!--  Quá tốc độ  -->
                                    <Grid Grid.Row="5" RowSpacing="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="1" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackLayout
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Padding="0,10,0,10"
                                            HorizontalOptions="FillAndExpand"
                                            Orientation="Horizontal">
                                            <controls:IconView
                                                Foreground="{StaticResource PrimaryColor}"
                                                HeightRequest="20"
                                                HorizontalOptions="Center"
                                                Source="ic_alert_speeding.png"
                                                VerticalOptions="Center"
                                                WidthRequest="20" />

                                            <Label
                                                Text="{i18n:TranslateResource DetailVehicle_Label_SpeedOverCount}"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />
                                        </StackLayout>

                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalOptions="EndAndExpand"
                                            Text="{Binding InforDetail.SpeedOverCount, Converter={StaticResource CountStopParkingConverter}}"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center" />

                                        <BoxView
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            BackgroundColor="{StaticResource GrayColor}"
                                            HeightRequest="0.5"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="Start" />
                                    </Grid>

                                    <!--  Sở quản lý  -->
                                    <Grid Grid.Row="6" RowSpacing="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="1" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackLayout
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Padding="0,10,0,10"
                                            HorizontalOptions="FillAndExpand"
                                            Orientation="Horizontal">
                                            <controls:IconView
                                                Foreground="{StaticResource PrimaryColor}"
                                                HeightRequest="20"
                                                HorizontalOptions="Center"
                                                Source="ic_company.png"
                                                WidthRequest="20" />

                                            <Label
                                                Text="{i18n:TranslateResource DetailVehicle_Label_DepartmentOfManagement}"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />
                                        </StackLayout>

                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalOptions="EndAndExpand"
                                            Text="{Binding InforDetail.DepartmentManager}"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center" />

                                        <BoxView
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            BackgroundColor="{StaticResource GrayColor}"
                                            HeightRequest="0.5"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="Start" />
                                    </Grid>

                                    <!--  Camera  -->
                                    <Grid
                                        Grid.Row="8"
                                        IsVisible="{Binding IsCameraEnable}"
                                        RowSpacing="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackLayout
                                            Grid.Column="0"
                                            Padding="0,10,0,10"
                                            HorizontalOptions="FillAndExpand"
                                            Orientation="Horizontal">
                                            <controls:IconView
                                                Foreground="{StaticResource PrimaryColor}"
                                                HeightRequest="20"
                                                HorizontalOptions="Center"
                                                Source="ic_camera.png"
                                                WidthRequest="20" />
                                            <Label
                                                Text="Camera giám sát"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />
                                        </StackLayout>
                                        <controls:IconView
                                            Grid.Column="1"
                                            Margin="0,0,20,0"
                                            Foreground="{StaticResource PrimaryColor}"
                                            HeightRequest="25"
                                            HorizontalOptions="End"
                                            Source="ic_livestream.png"
                                            WidthRequest="25">
                                            <controls:IconView.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding GotoCameraPageComamnd}" CommandParameter="Video" />
                                            </controls:IconView.GestureRecognizers>
                                        </controls:IconView>
                                    </Grid>
                                </StackLayout>
                            </sharpnado:MaterialFrame.Content>
                        </sharpnado:MaterialFrame>
                    </Grid>

                    <!--  phần hiển thị thông tin chi tiết SIM  -->
                    <Grid
                        Grid.Row="4"
                        IsVisible="{Binding ShowPaperInfor}"
                        RowSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <sharpnado:MaterialFrame
                            Grid.Row="0"
                            Padding="10"
                            CornerRadius="0"
                            HasShadow="False"
                            HorizontalOptions="FillAndExpand"
                            LightThemeBackgroundColor="{StaticResource GrayColor}"
                            VerticalOptions="FillAndExpand">

                            <sharpnado:MaterialFrame.Content>
                                <Label
                                    HorizontalOptions="StartAndExpand"
                                    Text="Ngày đến hạn"
                                    VerticalOptions="Center"
                                    VerticalTextAlignment="Center" />
                            </sharpnado:MaterialFrame.Content>
                        </sharpnado:MaterialFrame>
                        <sharpnado:MaterialFrame
                            Grid.Row="1"
                            Padding="10,0,10,0"
                            BackgroundColor="White"
                            CornerRadius="0"
                            HasShadow="False"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand">
                            <sharpnado:MaterialFrame.Content>
                                <Grid Grid.Row="0" RowSpacing="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <!--  ngày đăng kiểm  -->
                                    <Grid
                                        Grid.Row="0"
                                        IsVisible="{Binding DateOfRegistration, Converter={StaticResource HasDataConverter}}"
                                        RowSpacing="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="1" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackLayout
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Padding="0,10,0,10"
                                            HorizontalOptions="FillAndExpand"
                                            Orientation="Horizontal">
                                            <controls:IconView
                                                Foreground="{StaticResource PrimaryColor}"
                                                HeightRequest="20"
                                                HorizontalOptions="Center"
                                                Source="ic_time_black.png"
                                                VerticalOptions="Center"
                                                WidthRequest="20" />

                                            <Label
                                                Text="Ngày đăng kiểm"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />
                                        </StackLayout>

                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalOptions="EndAndExpand"
                                            Text="{Binding DateOfRegistration, Converter={StaticResource DateConverter}}"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center" />

                                        <BoxView
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            BackgroundColor="{StaticResource GrayColor}"
                                            HeightRequest="0.5"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="Start" />
                                    </Grid>
                                    <!--  ngày bảo hiểm  -->
                                    <Grid
                                        Grid.Row="1"
                                        IsVisible="{Binding InsuranceDate, Converter={StaticResource HasDataConverter}}"
                                        RowSpacing="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="1" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackLayout
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Padding="0,10,0,10"
                                            HorizontalOptions="FillAndExpand"
                                            Orientation="Horizontal">
                                            <controls:IconView
                                                Foreground="{StaticResource PrimaryColor}"
                                                HeightRequest="20"
                                                HorizontalOptions="Center"
                                                Source="ic_time_black.png"
                                                VerticalOptions="Center"
                                                WidthRequest="20" />
                                            <Label
                                                Text="Ngày hết hạn bảo hiểm"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />
                                        </StackLayout>

                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalOptions="EndAndExpand"
                                            Text="{Binding InsuranceDate, Converter={StaticResource DateConverter}}"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center" />

                                        <BoxView
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            BackgroundColor="{StaticResource GrayColor}"
                                            HeightRequest="0.5"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="Start" />
                                    </Grid>
                                </Grid>
                            </sharpnado:MaterialFrame.Content>
                        </sharpnado:MaterialFrame>
                    </Grid>
                </Grid>
            </StackLayout>
        </ScrollView>
        <pancakeview:PancakeView VerticalOptions="End">
            <pancakeview:PancakeView.Shadow>
                <pancakeview:DropShadow
                    BlurRadius="2"
                    Offset="0,0"
                    Color="Black" />
            </pancakeview:PancakeView.Shadow>

            <controls:HorizontalList
                Padding="10"
                BackgroundColor="{DynamicResource WhiteColor}"
                ItemsSource="{Binding MenuItems}"
                ListOrientation="Horizontal"
                SelectedCommand="{Binding SelectedMenuCommand}">
                <controls:HorizontalList.ItemTemplate>
                    <DataTemplate>
                        <StackLayout
                            HorizontalOptions="FillAndExpand"
                            Spacing="0"
                            VerticalOptions="CenterAndExpand">
                            <controls:IconView
                                Foreground="{DynamicResource PrimaryColor}"
                                HeightRequest="20"
                                HorizontalOptions="Center"
                                Source="{Binding Icon}"
                                WidthRequest="20" />
                            <Label
                                LineBreakMode="WordWrap"
                                Text="{Binding Title}"
                                TextColor="Black" />
                        </StackLayout>
                    </DataTemplate>

                </controls:HorizontalList.ItemTemplate>
            </controls:HorizontalList>
        </pancakeview:PancakeView>
        <busyIndicator:SfBusyIndicator IsBusy="{Binding IsBusy}" />
    </Grid>
</ContentView>