<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="BA_MobileGPS.Core.Views.VehicleDetailTab"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:busyIndicator="clr-namespace:Syncfusion.SfBusyIndicator.XForms;assembly=Syncfusion.SfBusyIndicator.XForms"
    xmlns:controls="clr-namespace:BA_MobileGPS.Core.Controls"
    xmlns:converters="clr-namespace:BA_MobileGPS.Core"
    xmlns:i18n="clr-namespace:BA_MobileGPS.Core.Helpers;assembly=BA_MobileGPS.Core"
    xmlns:pancakeview="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:prism="http://prismlibrary.com"
    xmlns:progressBar="clr-namespace:Syncfusion.XForms.ProgressBar;assembly=Syncfusion.SfProgressBar.XForms"
    xmlns:sharpnado="clr-namespace:Sharpnado.MaterialFrame;assembly=Sharpnado.MaterialFrame"
    BackgroundColor="White">
    <ContentView.Resources>
        <ResourceDictionary>
            <converters:NMConverter x:Key="NMConverter" />
            <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
        </ResourceDictionary>
        <Style TargetType="busyIndicator:SfBusyIndicator">
            <Setter Property="AnimationType" Value="Cupertino" />
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="EnableAnimation" Value="True" />
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="ViewBoxHeight" Value="50" />
            <Setter Property="ViewBoxWidth" Value="50" />
            <Setter Property="Duration" Value="0.8" />
        </Style>
    </ContentView.Resources>
    <Grid RowSpacing="0">
        <ScrollView
            Margin="0,0,0,70"
            Orientation="Vertical"
            VerticalOptions="StartAndExpand"
            VerticalScrollBarVisibility="Never">
            <StackLayout BackgroundColor="{StaticResource WhiteColor}" Spacing="0">
                <Grid RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  phần thu phí trong trường hợp xe nợ phí  -->
                    <Grid
                        Grid.Row="0"
                        IsVisible="{Binding InforDetail.IsExpried}"
                        RowSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <sharpnado:MaterialFrame
                            Grid.Row="0"
                            Padding="10"
                            CornerRadius="0"
                            HasShadow="False"
                            HorizontalOptions="FillAndExpand"
                            LightThemeBackgroundColor="{StaticResource GrayColor}"
                            VerticalOptions="FillAndExpand">

                            <sharpnado:MaterialFrame.Content>
                                <Label
                                    HorizontalOptions="StartAndExpand"
                                    Text="{i18n:TranslateResource DetailVehicle_Label_InforFee}"
                                    VerticalOptions="Center"
                                    VerticalTextAlignment="Center" />
                            </sharpnado:MaterialFrame.Content>
                        </sharpnado:MaterialFrame>
                        <sharpnado:MaterialFrame
                            Grid.Row="1"
                            Padding="10,0,10,0"
                            BackgroundColor="White"
                            CornerRadius="0"
                            HasShadow="False"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand">

                            <sharpnado:MaterialFrame.Content>

                                <Grid
                                    Grid.Row="0"
                                    Padding="10"
                                    HorizontalOptions="FillAndExpand"
                                    RowSpacing="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Label
                                        Grid.Row="0"
                                        Text="{Binding MessageInforChargeMoney}"
                                        TextColor="Red" />
                                </Grid>
                            </sharpnado:MaterialFrame.Content>
                        </sharpnado:MaterialFrame>
                    </Grid>
                    <!--  phần hiển thị thông tin chi tiết SIM  -->
                    <Grid Grid.Row="1" RowSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <sharpnado:MaterialFrame
                            Grid.Row="0"
                            Padding="10"
                            CornerRadius="0"
                            HasShadow="False"
                            HorizontalOptions="FillAndExpand"
                            LightThemeBackgroundColor="{StaticResource GrayColor}"
                            VerticalOptions="FillAndExpand">

                            <sharpnado:MaterialFrame.Content>
                                <Label
                                    HorizontalOptions="StartAndExpand"
                                    Text="{i18n:TranslateResource DetailVehicle_Label_InforSIM}"
                                    VerticalOptions="Center"
                                    VerticalTextAlignment="Center" />
                            </sharpnado:MaterialFrame.Content>
                        </sharpnado:MaterialFrame>
                        <sharpnado:MaterialFrame
                            Grid.Row="1"
                            Padding="10,0,10,0"
                            BackgroundColor="White"
                            CornerRadius="0"
                            HasShadow="False"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand">
                            <sharpnado:MaterialFrame.Content>
                                <StackLayout Grid.Row="0" Spacing="0">

                                    <!--  Số điện thoại  -->
                                    <Grid RowSpacing="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="1" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackLayout
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Padding="0,10,0,10"
                                            HorizontalOptions="FillAndExpand"
                                            Orientation="Horizontal">
                                            <controls:IconView
                                                Foreground="{StaticResource PrimaryColor}"
                                                HeightRequest="20"
                                                HorizontalOptions="Center"
                                                Source="ic_phone_black.png"
                                                VerticalOptions="Center"
                                                WidthRequest="20" />

                                            <Label
                                                Text="{i18n:TranslateResource DetailVehicle_Label_SimPhoneNumber}"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />
                                        </StackLayout>

                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalOptions="EndAndExpand"
                                            Text="{Binding InforDetail.SIMPhoneNumber}"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center" />

                                        <BoxView
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            BackgroundColor="{StaticResource GrayColor}"
                                            HeightRequest="0.5"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="Start" />
                                    </Grid>

                                    <!--  Ngày đăng ký  -->
                                    <Grid RowSpacing="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="1" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackLayout
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Padding="0,10,0,10"
                                            HorizontalOptions="FillAndExpand"
                                            Orientation="Horizontal">
                                            <controls:IconView
                                                Foreground="{StaticResource PrimaryColor}"
                                                HeightRequest="20"
                                                HorizontalOptions="Center"
                                                Source="ic_time_black.png"
                                                VerticalOptions="Center"
                                                WidthRequest="20" />

                                            <Label
                                                Text="{i18n:TranslateResource DetailVehicle_Label_JoinSystemDate}"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />
                                        </StackLayout>

                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalOptions="EndAndExpand"
                                            Text="{Binding InforDetail.JoinSystemDate, Converter={StaticResource DateConverter}}"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center" />

                                        <BoxView
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            BackgroundColor="{StaticResource GrayColor}"
                                            HeightRequest="0.5"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="Start" />
                                    </Grid>

                                    <!--  Ngày hết hạn  -->
                                    <!--<Grid IsVisible="{Binding InforDetail.MCExpried, Converter={StaticResource HasDataConverter}}" RowSpacing="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="1" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <StackLayout
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Padding="0,10,0,10"
                                                HorizontalOptions="FillAndExpand"
                                                Orientation="Horizontal">
                                                <controls:IconView
                                                    Foreground="{StaticResource PrimaryColor}"
                                                    HeightRequest="20"
                                                    HorizontalOptions="Center"
                                                    Source="ic_time_black.png"
                                                    VerticalOptions="Center"
                                                    WidthRequest="20" />

                                                <Label
                                                    Text="{i18n:TranslateResource DetailVehicle_Label_Vehicle_Expiration_Date}"
                                                    VerticalOptions="Center"
                                                    VerticalTextAlignment="Center" />
                                            </StackLayout>

                                            <Label
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                HorizontalOptions="EndAndExpand"
                                                Text="{Binding InforDetail.MCExpried, Converter={StaticResource DateConverter}}"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />

                                            <BoxView
                                                Grid.Row="1"
                                                Grid.ColumnSpan="2"
                                                BackgroundColor="{StaticResource GrayColor}"
                                                HeightRequest="0.5"
                                                HorizontalOptions="FillAndExpand"
                                                VerticalOptions="Start" />
                                        </Grid>-->
                                </StackLayout>
                            </sharpnado:MaterialFrame.Content>
                        </sharpnado:MaterialFrame>
                    </Grid>

                    <!--  phần hiển thị thông tin chi tiết của xe  -->
                    <Grid Grid.Row="2" RowSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <sharpnado:MaterialFrame
                            Grid.Row="0"
                            Padding="10"
                            CornerRadius="0"
                            HasShadow="False"
                            HorizontalOptions="FillAndExpand"
                            LightThemeBackgroundColor="{StaticResource GrayColor}"
                            VerticalOptions="FillAndExpand">

                            <sharpnado:MaterialFrame.Content>
                                <Label
                                    HorizontalOptions="StartAndExpand"
                                    Text="{i18n:TranslateResource DetailVehicle_Label_TileInforVehicle}"
                                    VerticalOptions="Center"
                                    VerticalTextAlignment="Center" />
                            </sharpnado:MaterialFrame.Content>
                        </sharpnado:MaterialFrame>
                        <sharpnado:MaterialFrame
                            Grid.Row="1"
                            Padding="10,0,10,0"
                            BackgroundColor="White"
                            CornerRadius="0"
                            HasShadow="False"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand">

                            <sharpnado:MaterialFrame.Content>

                                <StackLayout Spacing="0">

                                    <!--  biển kiểm soát  -->
                                    <Grid
                                        x:Name="xxVehiclePlate"
                                        Grid.Row="0"
                                        RowSpacing="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="1" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackLayout
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Padding="0,10,0,10"
                                            HorizontalOptions="FillAndExpand"
                                            Orientation="Horizontal">
                                            <controls:IconView
                                                Foreground="{StaticResource PrimaryColor}"
                                                HeightRequest="20"
                                                HorizontalOptions="Center"
                                                Source="ic_vehicleplate.png"
                                                VerticalOptions="Center"
                                                WidthRequest="20" />
                                            <Label
                                                Text="{i18n:TranslateResource DetailVehicle_Label_VehiclePlate}"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />
                                        </StackLayout>

                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalOptions="EndAndExpand"
                                            Text="{Binding InforDetail.VehiclePlate}"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center" />

                                        <BoxView
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            BackgroundColor="{StaticResource GrayColor}"
                                            HeightRequest="0.5"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="Start" />
                                    </Grid>

                                    <!--  IMEI  -->
                                    <Grid Grid.Row="1" RowSpacing="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="1" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackLayout
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Padding="0,10,0,10"
                                            HorizontalOptions="FillAndExpand"
                                            Orientation="Horizontal"
                                            Spacing="10">
                                            <controls:IconView
                                                Foreground="{StaticResource PrimaryColor}"
                                                HeightRequest="20"
                                                HorizontalOptions="Center"
                                                Source="ic_lisence.png"
                                                VerticalOptions="Center"
                                                WidthRequest="20" />

                                            <Label
                                                Text="IMEI"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />
                                        </StackLayout>

                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalOptions="EndAndExpand"
                                            Text="{Binding InforDetail.IMEI}"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center" />

                                        <BoxView
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            BackgroundColor="{StaticResource GrayColor}"
                                            HeightRequest="0.5"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="Start" />
                                    </Grid>

                                    <!--  Địa chỉ  -->
                                    <Grid Grid.Row="1" RowSpacing="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="1" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackLayout
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Padding="0,10,0,10"
                                            HorizontalOptions="FillAndExpand"
                                            Orientation="Horizontal">
                                            <controls:IconView
                                                Foreground="{StaticResource PrimaryColor}"
                                                HeightRequest="20"
                                                HorizontalOptions="Center"
                                                Source="ic_location_black.png"
                                                VerticalOptions="Center"
                                                WidthRequest="20" />
                                            <!--  {Binding InforCommonVehicle.IconVehicle}  -->
                                        </StackLayout>

                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalOptions="EndAndExpand"
                                            HorizontalTextAlignment="Start"
                                            LineBreakMode="WordWrap"
                                            MaxLines="2"
                                            Text="{Binding Address}"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center" />

                                        <BoxView
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            BackgroundColor="{StaticResource GrayColor}"
                                            HeightRequest="0.5"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="Start" />
                                    </Grid>

                                    <!--  Tọa độ  -->
                                    <Grid
                                        Grid.Row="2"
                                        IsVisible="{Binding IsShowCoordinates}"
                                        RowSpacing="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="1" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackLayout
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Padding="0,10,0,10"
                                            HorizontalOptions="FillAndExpand"
                                            Orientation="Horizontal">
                                            <controls:IconView
                                                Foreground="{StaticResource PrimaryColor}"
                                                HeightRequest="20"
                                                HorizontalOptions="Center"
                                                Source="ic_coordinates.png"
                                                VerticalOptions="Center"
                                                WidthRequest="20" />

                                            <Label
                                                Text="{i18n:TranslateResource DetailVehicle_Label_Coordinates}"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />
                                        </StackLayout>

                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalOptions="EndAndExpand"
                                            Text="{Binding Coordinates}"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center" />

                                        <BoxView
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            BackgroundColor="{StaticResource GrayColor}"
                                            HeightRequest="0.5"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="Start" />
                                    </Grid>

                                    <!--  thời gian  -->
                                    <Grid Grid.Row="3" RowSpacing="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="1" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackLayout
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Padding="0,10,0,10"
                                            HorizontalOptions="FillAndExpand"
                                            Orientation="Horizontal">
                                            <controls:IconView
                                                Foreground="{StaticResource PrimaryColor}"
                                                HeightRequest="20"
                                                HorizontalOptions="Center"
                                                Source="ic_time_black.png"
                                                VerticalOptions="Center"
                                                WidthRequest="20" />

                                            <Label
                                                Text="{i18n:TranslateResource DetailVehicle_Label_Time}"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />
                                        </StackLayout>

                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalOptions="EndAndExpand"
                                            Text="{Binding VehicleTime, Converter={StaticResource DateTimeConverter}}"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center" />

                                        <BoxView
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            BackgroundColor="{StaticResource GrayColor}"
                                            HeightRequest="0.5"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="Start" />
                                    </Grid>

                                    <!--  Vân tốc  -->
                                    <Grid Grid.Row="4" RowSpacing="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="1" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackLayout
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Padding="0,10,0,10"
                                            HorizontalOptions="FillAndExpand"
                                            Orientation="Horizontal">
                                            <controls:IconView
                                                Foreground="{StaticResource PrimaryColor}"
                                                HeightRequest="20"
                                                HorizontalOptions="Center"
                                                Source="ic_velocity.png"
                                                VerticalOptions="Center"
                                                WidthRequest="20" />

                                            <Label
                                                Text="{i18n:TranslateResource DetailVehicle_Label_Speed}"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />
                                        </StackLayout>

                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalOptions="EndAndExpand"
                                            Text="{Binding VelocityGPS, Converter={StaticResource VelocityConverter}}"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center" />

                                        <BoxView
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            BackgroundColor="{StaticResource GrayColor}"
                                            HeightRequest="0.5"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="Start" />
                                    </Grid>

                                    <!--  Động cơ  -->
                                    <Grid Grid.Row="5" RowSpacing="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="1" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackLayout
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Padding="0,10,0,10"
                                            HorizontalOptions="FillAndExpand"
                                            Orientation="Horizontal">
                                            <controls:IconView
                                                Foreground="{StaticResource PrimaryColor}"
                                                HeightRequest="20"
                                                HorizontalOptions="Center"
                                                Source="ic_engine.png"
                                                VerticalOptions="Center"
                                                WidthRequest="20" />

                                            <Label
                                                Text="{i18n:TranslateResource DetailVehicle_Label_Engineer}"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />
                                        </StackLayout>

                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalOptions="EndAndExpand"
                                            Text="{Binding EngineState}"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center" />

                                        <BoxView
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            BackgroundColor="{StaticResource GrayColor}"
                                            HeightRequest="0.5"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="Start" />
                                    </Grid>

                                    <!--  km trong ngày  -->
                                    <Grid Grid.Row="6" RowSpacing="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="1" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackLayout
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Padding="0,10,0,10"
                                            HorizontalOptions="FillAndExpand"
                                            Orientation="Horizontal">
                                            <controls:IconView
                                                Foreground="{StaticResource PrimaryColor}"
                                                HeightRequest="20"
                                                HorizontalOptions="Center"
                                                Source="ic_distance.png"
                                                VerticalOptions="Center"
                                                WidthRequest="20" />

                                            <Label
                                                Text="{i18n:TranslateResource DetailVehicle_Label_KilometInToDay}"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />
                                        </StackLayout>

                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalOptions="EndAndExpand"
                                            Text="{Binding TotalKm, Converter={StaticResource KmConverter}}"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center" />

                                        <BoxView
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            BackgroundColor="{StaticResource GrayColor}"
                                            HeightRequest="0.5"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="Start" />
                                    </Grid>
                                    <!--  km trong tháng  -->
                                    <Grid
                                        Grid.Row="7"
                                        IsVisible="true"
                                        RowSpacing="0">
                                        <Grid.Triggers>
                                            <DataTrigger
                                                Binding="{Binding KmInMonth}"
                                                TargetType="Grid"
                                                Value="0">
                                                <Setter Property="IsVisible" Value="false" />
                                            </DataTrigger>
                                        </Grid.Triggers>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="1" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackLayout
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Padding="0,10,0,10"
                                            HorizontalOptions="FillAndExpand"
                                            Orientation="Horizontal">
                                            <controls:IconView
                                                Foreground="{StaticResource PrimaryColor}"
                                                HeightRequest="20"
                                                HorizontalOptions="Center"
                                                Source="ic_distance.png"
                                                VerticalOptions="Center"
                                                WidthRequest="20" />

                                            <Label
                                                Text="{i18n:TranslateResource DetailVehicle_Label_KilometInMonth}"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />
                                        </StackLayout>

                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalOptions="EndAndExpand"
                                            Text="{Binding KmInMonth, Converter={StaticResource KmConverter}}"
                                            VerticalOptions="Center"
                                            VerticalTextAlignment="Center" />

                                        <BoxView
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            BackgroundColor="{StaticResource GrayColor}"
                                            HeightRequest="0.5"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="Start" />
                                    </Grid>


                                    <!--  KM tích luỹ  -->
                                    <Grid
                                        Grid.Row="8"
                                        IsVisible="{Binding InforDetail.KilometAccumulated, Converter={StaticResource HasDataConverter}}"
                                        RowSpacing="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="1" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackLayout
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Padding="0,10,0,10"
                                            HorizontalOptions="FillAndExpand"
                                            Orientation="Horizontal">
                                            <controls:IconView
                                                Foreground="{StaticResource PrimaryColor}"
                                                HeightRequest="20"
                                                HorizontalOptions="Center"
                                                Source="ic_distance.png"
                                                VerticalOptions="Center"
                                                WidthRequest="20" />

                                            <Label
                                                Text="{i18n:TranslateResource DetailVehicle_Label_KilometAccumulated}"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />
                                        </StackLayout>

                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalOptions="EndAndExpand"
