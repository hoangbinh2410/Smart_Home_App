                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Padding="0,10,0,10"
                                                HorizontalOptions="FillAndExpand"
                                                Orientation="Horizontal">
                                                <controls:IconView
                                                    Foreground="{StaticResource PrimaryColor}"
                                                    HeightRequest="20"
                                                    HorizontalOptions="Center"
                                                    Source="ic_time_running.png"
                                                    VerticalOptions="Center"
                                                    WidthRequest="20" />

                                                <Label
                                                    Text="{i18n:TranslateResource DetailVehicle_Label_MinutesOfDrivingTimeContinuous}"
                                                    VerticalOptions="Center"
                                                    VerticalTextAlignment="Center" />
                                            </StackLayout>

                                            <Label
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                HorizontalOptions="EndAndExpand"
                                                Text="{Binding InforDetail.VehicleHtn.MinutesOfDrivingTimeContinuous, Converter={StaticResource MinutesOfDrivingTimeConverter}}"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />

                                            <BoxView
                                                Grid.Row="1"
                                                Grid.ColumnSpan="2"
                                                BackgroundColor="{StaticResource GrayColor}"
                                                HeightRequest="0.5"
                                                HorizontalOptions="FillAndExpand"
                                                VerticalOptions="Start" />
                                        </Grid>

                                        <!--  Thời gian lái xe trong ngày  -->
                                        <Grid Grid.Row="5" RowSpacing="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="1" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <StackLayout
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Padding="0,10,0,10"
                                                HorizontalOptions="FillAndExpand"
                                                Orientation="Horizontal">
                                                <controls:IconView
                                                    Foreground="{StaticResource PrimaryColor}"
                                                    HeightRequest="20"
                                                    HorizontalOptions="Center"
                                                    Source="ic_turnon_time_on_day.png"
                                                    VerticalOptions="Center"
                                                    WidthRequest="20" />

                                                <Label
                                                    Text="{i18n:TranslateResource DetailVehicle_Label_MinutesOfDrivingTimeInDay}"
                                                    VerticalOptions="Center"
                                                    VerticalTextAlignment="Center" />
                                            </StackLayout>

                                            <Label
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                HorizontalOptions="EndAndExpand"
                                                Text="{Binding InforDetail.VehicleHtn.MinutesOfDrivingTimeInDay, Converter={StaticResource MinutesOfDrivingTimeConverter}}"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />

                                            <BoxView
                                                Grid.Row="1"
                                                Grid.ColumnSpan="2"
                                                BackgroundColor="{StaticResource GrayColor}"
                                                HeightRequest="0.5"
                                                HorizontalOptions="FillAndExpand"
                                                VerticalOptions="Start" />
                                        </Grid>

                                        <!--  Quá tốc độ  -->
                                        <Grid Grid.Row="6" RowSpacing="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="1" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <StackLayout
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Padding="0,10,0,10"
                                                HorizontalOptions="FillAndExpand"
                                                Orientation="Horizontal">
                                                <controls:IconView
                                                    Foreground="{StaticResource PrimaryColor}"
                                                    HeightRequest="20"
                                                    HorizontalOptions="Center"
                                                    Source="ic_alert_speeding.png"
                                                    VerticalOptions="Center"
                                                    WidthRequest="20" />

                                                <Label
                                                    Text="{i18n:TranslateResource DetailVehicle_Label_SpeedOverCount}"
                                                    VerticalOptions="Center"
                                                    VerticalTextAlignment="Center" />
                                            </StackLayout>

                                            <Label
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                HorizontalOptions="EndAndExpand"
                                                Text="{Binding InforDetail.SpeedOverCount, Converter={StaticResource CountStopParkingConverter}}"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />

                                            <BoxView
                                                Grid.Row="1"
                                                Grid.ColumnSpan="2"
                                                BackgroundColor="{StaticResource GrayColor}"
                                                HeightRequest="0.5"
                                                HorizontalOptions="FillAndExpand"
                                                VerticalOptions="Start" />
                                        </Grid>

                                        <!--  Sở quản lý  -->
                                        <Grid Grid.Row="7" RowSpacing="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="1" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <StackLayout
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Padding="0,10,0,10"
                                                HorizontalOptions="FillAndExpand"
                                                Orientation="Horizontal">
                                                <controls:IconView
                                                    Foreground="{StaticResource PrimaryColor}"
                                                    HeightRequest="20"
                                                    HorizontalOptions="Center"
                                                    Source="ic_company.png"
                                                    WidthRequest="20" />

                                                <Label
                                                    Text="{i18n:TranslateResource DetailVehicle_Label_DepartmentOfManagement}"
                                                    VerticalOptions="Center"
                                                    VerticalTextAlignment="Center" />
                                            </StackLayout>

                                            <Label
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                HorizontalOptions="EndAndExpand"
                                                Text="{Binding InforDetail.DepartmentManager}"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />

                                            <BoxView
                                                Grid.Row="1"
                                                Grid.ColumnSpan="2"
                                                BackgroundColor="{StaticResource GrayColor}"
                                                HeightRequest="0.5"
                                                HorizontalOptions="FillAndExpand"
                                                VerticalOptions="Start" />
                                        </Grid>

                                        <!--  Camera  -->
                                        <Grid
                                            Grid.Row="8"
                                            IsVisible="{Binding IsCameraEnable}"
                                            RowSpacing="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <StackLayout
                                                Grid.Column="0"
                                                Padding="0,10,0,10"
                                                HorizontalOptions="FillAndExpand"
                                                Orientation="Horizontal">
                                                <controls:IconView
                                                    Foreground="{StaticResource PrimaryColor}"
                                                    HeightRequest="20"
                                                    HorizontalOptions="Center"
                                                    Source="ic_camera.png"
                                                    WidthRequest="20" />
                                                <Label
                                                    Text="Camera giám sát"
                                                    VerticalOptions="Center"
                                                    VerticalTextAlignment="Center" />
                                            </StackLayout>
                                            <controls:IconView
                                                Grid.Column="1"
                                                Margin="0,0,20,0"
                                                Foreground="{StaticResource PrimaryColor}"
                                                HeightRequest="25"
                                                HorizontalOptions="End"
                                                Source="ic_livestream.png"
                                                WidthRequest="25">
                                                <controls:IconView.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding GotoCameraPageComamnd}" CommandParameter="Video" />
                                                </controls:IconView.GestureRecognizers>
                                            </controls:IconView>
                                        </Grid>
                                    </Grid>
                                </sharpnado:MaterialFrame.Content>
                            </sharpnado:MaterialFrame>
                        </Grid>
                    </Grid>
                </StackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>