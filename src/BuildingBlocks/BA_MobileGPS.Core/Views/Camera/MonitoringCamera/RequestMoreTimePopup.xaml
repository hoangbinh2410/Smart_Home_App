<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage
    x:Class="BA_MobileGPS.Core.Views.RequestMoreTimePopup"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:animation="clr-namespace:Rg.Plugins.Popup.Animations;assembly=Rg.Plugins.Popup"
    xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    xmlns:pancakeview="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:prism="http://prismlibrary.com"
    prism:ViewModelLocator.AutowireViewModel="True"
    BackgroundColor="Transparent"
    CloseWhenBackgroundIsClicked="True">
    <pages:PopupPage.Animation>
        <animation:MoveAnimation
            DurationIn="100"
            DurationOut="100"
            PositionIn="Bottom"
            PositionOut="Bottom" />
    </pages:PopupPage.Animation>
    <pages:PopupPage.Content>
        <pancakeview:PancakeView
            BackgroundColor="#ECECEC"
            CornerRadius="10,10,0,0"
            HeightRequest="160"
            HorizontalOptions="Center"
            VerticalOptions="End"
            WidthRequest="600">
            <StackLayout Spacing="0">
                <Grid BackgroundColor="{StaticResource WhiteColor}">
                    <Label
                        Margin="0,10"
                        HorizontalOptions="Center"
                        LineBreakMode="TailTruncation"
                        MaxLines="1"
                        StyleClass="GroupTitleLabel"
                        Text="Thêm thời gian phát video"
                        TextColor="{StaticResource TextPrimaryColor}" />
                </Grid>
                <BoxView BackgroundColor="{StaticResource GrayColor2}" HeightRequest="1" />
                <Label
                    Margin="0,10,0,0"
                    HorizontalOptions="Center"
                    StyleClass="GroupTitleLabel"
                    Text="{Binding Source={x:Reference slider}, Path=Value, StringFormat='{0:F0} Phút', Mode=OneWay}" />
                <Slider
                    x:Name="slider"
                    Margin="20,0"
                    Maximum="60"
                    Minimum="6"
                    ThumbColor="{DynamicResource PrimaryColor}"
                    VerticalOptions="CenterAndExpand" />
                <Grid
                    Padding="5"
                    ColumnDefinitions="*,*"
                    ColumnSpacing="5"
                    HeightRequest="35"
                    VerticalOptions="EndAndExpand">
                    <buttons:SfButton
                        Padding="0"
                        BackgroundColor="{DynamicResource PrimaryColor}"
                        Command="{Binding SetTimeValueCommand}"
                        CommandParameter="{Binding Source={x:Reference slider}, Path=Value}"
                        CornerRadius="5"
                        FontSize="14"
                        Text="Đồng ý"
                        TextColor="{StaticResource WhiteColor}" />

                    <buttons:SfButton
                        Grid.Column="1"
                        Padding="0"
                        BackgroundColor="{DynamicResource WhiteColor}"
                        Command="{Binding ClosePopupCommand}"
                        CornerRadius="5"
                        FontSize="14"
                        Text="Hủy"
                        TextColor="{StaticResource PrimaryColor}" />
                </Grid>
            </StackLayout>
        </pancakeview:PancakeView>
    </pages:PopupPage.Content>
</pages:PopupPage>