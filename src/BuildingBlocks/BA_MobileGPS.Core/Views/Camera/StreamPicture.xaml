<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BA_MobileGPS.Core.Views.StreamPicture"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffImage="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:prism="http://prismlibrary.com"
    x:Name="this"
    Title="Camera Stream"
    prism:ViewModelLocator.AutowireViewModel="True">
    <NavigationPage.TitleView>
        <Grid
            ColumnSpacing="10"
            HeightRequest="44"
            HorizontalOptions="FillAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="1"
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Center"
                LineBreakMode="TailTruncation"
                Text="{Binding Source={x:Reference this}, Path=Title}"
                TextColor="{DynamicResource WhiteColor}"
                VerticalOptions="Center" />
        </Grid>
    </NavigationPage.TitleView>
    <Grid
        x:Name="main"
        ColumnDefinitions="*,*"
        RowDefinitions="*,*"
        RowSpacing="5">

        <Label
            Margin="0,10,0,0"
            HorizontalOptions="Start"
            Text="Camera 1"
            VerticalOptions="Start" />
        <ffImage:CachedImage Source="avatar_default.png">
            <ffImage:CachedImage.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ImageTapCommand}" CommandParameter="1" />
            </ffImage:CachedImage.GestureRecognizers>
        </ffImage:CachedImage>



        <Label
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,10,0,0"
            HorizontalOptions="Start"
            Text="Camera 2"
            VerticalOptions="Start" />

        <ffImage:CachedImage
            Grid.Row="1"
            Grid.Column="0"
            Source="avatar_default.png">
            <ffImage:CachedImage.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ImageTapCommand}" CommandParameter="2" />
            </ffImage:CachedImage.GestureRecognizers>
        </ffImage:CachedImage>

        <Label
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,10,0,0"
            HorizontalOptions="Start"
            Text="Camera 4"
            VerticalOptions="Start" />
        <ffImage:CachedImage
            Grid.Row="1"
            Grid.Column="1"
            Source="avatar_default.png">
            <ffImage:CachedImage.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ImageTapCommand}" CommandParameter="3" />
            </ffImage:CachedImage.GestureRecognizers>
        </ffImage:CachedImage>

        <Label
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,10,0,0"
            HorizontalOptions="Start"
            Text="Camera 3"
            VerticalOptions="Start" />
        <ffImage:CachedImage
            Grid.Row="0"
            Grid.Column="1"
            Source="avatar_default.png">
            <ffImage:CachedImage.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ImageTapCommand}" CommandParameter="4" />
            </ffImage:CachedImage.GestureRecognizers>
        </ffImage:CachedImage>
    </Grid>
</ContentPage>