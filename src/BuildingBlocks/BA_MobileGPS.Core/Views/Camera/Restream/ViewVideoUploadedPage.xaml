<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BA_MobileGPS.Core.Views.ViewVideoUploadedPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cluster="clr-namespace:BA_MobileGPS.Core;assembly=BA_MobileGPS.Core"
    xmlns:converter="clr-namespace:BA_MobileGPS.Core"
    xmlns:googlemapsBehaviors="clr-namespace:BA_MobileGPS.Core.GoogleMap.Behaviors;assembly=BA_MobileGPS.Core"
    xmlns:icons="clr-namespace:BA_MobileGPS.Core.Controls"
    xmlns:indicator="clr-namespace:Syncfusion.SfBusyIndicator.XForms;assembly=Syncfusion.SfBusyIndicator.XForms"
    xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:prism="http://prismlibrary.com"
    xmlns:vlc="clr-namespace:LibVLCSharp.Forms.Shared;assembly=LibVLCSharp.Forms"
    x:Name="root"
    Title="Xem video"
    prism:ViewModelLocator.AutowireViewModel="True"
    NavigationPage.HasNavigationBar="{Binding IsFullScreenOff}">
    <ContentPage.Resources>
        <Style TargetType="indicator:SfBusyIndicator">
            <Setter Property="AnimationType" Value="Cupertino" />
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="EnableAnimation" Value="True" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="ViewBoxHeight" Value="35" />
            <Setter Property="ViewBoxWidth" Value="35" />
            <Setter Property="Duration" Value="0.8" />
        </Style>
        <converter:DateTimeViewConverter x:Key="DateTimeViewConverter" />
        <converter:ValueProgressBarConverter x:Key="ValueProgressBarConverter" />
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid RowDefinitions="Auto,*">
            <Grid.Triggers>
                <DataTrigger
                    Binding="{Binding IsFullScreenOff}"
                    TargetType="Grid"
                    Value="False">
                    <Setter Property="RowDefinitions" Value="*,0" />
                </DataTrigger>
            </Grid.Triggers>
            <!--  // Height set ở code  -->
            <Grid
                x:Name="mainTopLayout"
                Grid.Row="0"
                RowDefinitions="*,Auto"
                RowSpacing="0">

                <!--  Video  -->
                <pancake:PancakeView BackgroundColor="{DynamicResource BlackColor}" HeightRequest="250">
                    <Grid>
                        <vlc:MediaPlayerElement
                            HorizontalOptions="Fill"
                            LibVLC="{Binding LibVLC}"
                            MediaPlayer="{Binding MediaPlayer}"
                            VerticalOptions="Fill">
                            <vlc:MediaPlayerElement.PlaybackControls>
                                <vlc:PlaybackControls IsAudioTracksSelectionButtonVisible="True" IsSeekBarVisible="True">
                                    <vlc:PlaybackControls.ControlTemplate>
                                        <ControlTemplate>
                                            <StackLayout IsVisible="{TemplateBinding MediaPlayer, Converter={StaticResource ObjectToBoolConverter}}" Spacing="0">
                                                <StackLayout
                                                    x:Name="ControlsPanel"
                                                    Spacing="0"
                                                    Style="{TemplateBinding ControlsPanelStyle}">
                                                    <StackLayout Orientation="Horizontal">
                                                        <StackLayout
                                                            Margin="20,0,0,0"
                                                            Orientation="Horizontal"
                                                            Spacing="10">
                                                            <Button
                                                                Command="{Binding Source={x:Reference root}, Path=BindingContext.PreviousVideoCommand}"
                                                                FontSize="20"
                                                                HeightRequest="30"
                                                                Style="{TemplateBinding RewindButtonStyle}"
                                                                VerticalOptions="CenterAndExpand"
                                                                WidthRequest="30" />
                                                            <Button
                                                                x:Name="PlayPauseButton"
                                                                FontSize="20"
                                                                HeightRequest="30"
                                                                Style="{TemplateBinding PlayPauseButtonStyle}"
                                                                VerticalOptions="CenterAndExpand"
                                                                WidthRequest="30" />

                                                            <Button
                                                                Command="{Binding Source={x:Reference root}, Path=BindingContext.NextVideoCommand}"
                                                                FontSize="20"
                                                                HeightRequest="30"
                                                                Style="{TemplateBinding SeekButtonStyle}"
                                                                VerticalOptions="CenterAndExpand"
                                                                WidthRequest="30" />

                                                            <Label
                                                                x:Name="RemainingTimeLabel"
                                                                Style="{TemplateBinding RemainingTimeLabelStyle}"
                                                                VerticalOptions="CenterAndExpand" />
                                                        </StackLayout>
                                                        <StackLayout
                                                            Margin="0,0,40,0"
                                                            HorizontalOptions="EndAndExpand"
                                                            Orientation="Horizontal"
                                                            Spacing="13"
                                                            VerticalOptions="Center">
                                                            <icons:IconView
                                                                Foreground="{DynamicResource WhiteColor}"
                                                                HeightRequest="25"
                                                                Source="ic_fullscreen.png"
                                                                WidthRequest="25">
                                                                <icons:IconView.Triggers>
                                                                    <DataTrigger
                                                                        Binding="{Binding IsFullScreenOff}"
                                                                        TargetType="icons:IconView"
                                                                        Value="false">
                                                                        <Setter Property="Source" Value="ic_normalscreen" />
                                                                    </DataTrigger>
                                                                </icons:IconView.Triggers>
                                                                <icons:IconView.GestureRecognizers>
                                                                    <TapGestureRecognizer Command="{Binding Source={x:Reference root}, Path=BindingContext.FullScreenTappedCommand}" />
                                                                </icons:IconView.GestureRecognizers>
                                                            </icons:IconView>
                                                        </StackLayout>
                                                    </StackLayout>
                                                    <Slider
                                                        x:Name="SeekBar"
                                                        Style="{TemplateBinding SeekBarStyle}"
                                                        ValueChanged="SeekBar_ValueChanged"
                                                        Value="{Binding SeekBarValue}" />
                                                </StackLayout>
                                            </StackLayout>
                                        </ControlTemplate>
                                    </vlc:PlaybackControls.ControlTemplate>
                                </vlc:PlaybackControls>
                            </vlc:MediaPlayerElement.PlaybackControls>
                        </vlc:MediaPlayerElement>

                        <indicator:SfBusyIndicator
                            Title="Loadding...."
                            IsBusy="{Binding BusyIndicatorActive}"
                            TextColor="{DynamicResource WhiteColor}"
                            TextSize="10" />

                        <Grid
                            x:Name="errGrid"
                            BackgroundColor="{DynamicResource BlackColor}"
                            IsVisible="{Binding IsError}">
                            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                <icons:IconView
                                    Foreground="{DynamicResource WhiteColor}"
                                    HeightRequest="25"
                                    Source="ic_reload"
                                    WidthRequest="25" />
                                <Label
                                    Margin="30,0"
                                    FontSize="10"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    LineBreakMode="WordWrap"
                                    Text="{Binding ErrorMessenger}"
                                    TextColor="{DynamicResource WhiteColor}" />
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ReLoadCommand}" />
                                </StackLayout.GestureRecognizers>
                            </StackLayout>
                        </Grid>
                    </Grid>
                </pancake:PancakeView>

                <!--  Chi tiết video được chọn  -->
                <StackLayout
                    Grid.Row="1"
                    Padding="10"
                    BackgroundColor="#3D3D3D"
                    HorizontalOptions="FillAndExpand"
                    IsVisible="{Binding IsFullScreenOff}"
                    Spacing="3">
                    <StackLayout HorizontalOptions="Fill" Orientation="Horizontal">
                        <StackLayout HorizontalOptions="StartAndExpand" Spacing="0">
                            <Label
                                HorizontalOptions="Start"
                                HorizontalTextAlignment="Start"
                                StyleClass="BoldText"
                                TextColor="{DynamicResource WhiteColor}">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding VideoSlected.VehicleName}" />
                                        <Span Text=" · " />
                                        <Span Text="{Binding VideoSlected.Channel, StringFormat='Kênh {0}'}" />
                                        <Span Text=" · " />
                                        <Span Text="{Binding VideoSlected.StartTime, Converter={StaticResource TimeConverter}}" />
                                        <Span Text=" - " />
                                        <Span Text="{Binding VideoSlected.EndTime, Converter={StaticResource TimeConverter}}" />

                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                        </StackLayout>
                        <StackLayout
                            HorizontalOptions="EndAndExpand"
                            Orientation="Horizontal"
                            Spacing="15">
                            <icons:IconView
                                Foreground="{DynamicResource WhiteColor}"
                                HeightRequest="20"
                                Source="ic_camera.png"
                                WidthRequest="20">
                                <icons:IconView.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ScreenShotTappedCommand}" />
                                </icons:IconView.GestureRecognizers>
                            </icons:IconView>
                            <icons:IconView
                                Foreground="{DynamicResource WhiteColor}"
                                HeightRequest="20"
                                Source="ic_dowload.png"
                                WidthRequest="20">
                                <icons:IconView.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding DowloadVideoCommand}" />
                                </icons:IconView.GestureRecognizers>
                            </icons:IconView>

                            <!--<icons:IconView
                                        Foreground="{DynamicResource WhiteColor}"
                                        HeightRequest="20"
                                        Source="ic_star.png"
                                        WidthRequest="20" />-->
                        </StackLayout>
                    </StackLayout>

                    <ProgressBar
                        Margin="10,0"
                        HorizontalOptions="Fill"
                        IsVisible="{Binding IsDownloading}"
                        Progress="{Binding ProgressValue, Converter={StaticResource ValueProgressBarConverter}}"
                        ProgressColor="Green" />
                </StackLayout>
            </Grid>
            <cluster:Map
                x:Name="map"
                Grid.Row="1"
                IsVisible="{Binding IsFullScreenOff}"
                MapType="{Binding MapType}">
                <cluster:Map.Behaviors>
                    <googlemapsBehaviors:BindingPinsBehavior Value="{Binding Pins}" />
                    <googlemapsBehaviors:PinClickedToCommandBehavior Command="{Binding PinClickedCommand}" />
                    <googlemapsBehaviors:BindingPolylinesBehavior Value="{Binding Polylines}" />
                    <googlemapsBehaviors:MoveCameraBehavior Request="{Binding MoveCameraRequest}" />
                    <googlemapsBehaviors:AnimateCameraBehavior Request="{Binding AnimateCameraRequest}" />
                </cluster:Map.Behaviors>
            </cluster:Map>
        </Grid>
    </ContentPage.Content>
</ContentPage>