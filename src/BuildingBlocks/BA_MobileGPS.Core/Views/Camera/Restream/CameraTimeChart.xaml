<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BA_MobileGPS.Core.Views.CameraTimeChart"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:busyIndicator="clr-namespace:Syncfusion.SfBusyIndicator.XForms;assembly=Syncfusion.SfBusyIndicator.XForms"
    xmlns:chart="clr-namespace:Syncfusion.SfChart.XForms;assembly=Syncfusion.SfChart.XForms"
    xmlns:effects="clr-namespace:BA_MobileGPS.Core.Effects"
    xmlns:ffImage="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:i18n="clr-namespace:BA_MobileGPS.Core.Helpers;assembly=BA_MobileGPS.Core"
    xmlns:icons="clr-namespace:BA_MobileGPS.Core.Controls"
    xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:prism="http://prismlibrary.com"
    xmlns:xforms="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
    x:Name="root"
    prism:ViewModelLocator.AutowireViewModel="True"
    NavigationPage.HasBackButton="False">
    <ContentPage.Resources>
        <Style TargetType="busyIndicator:SfBusyIndicator">
            <Setter Property="AnimationType" Value="Cupertino" />
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="EnableAnimation" Value="True" />
            <Setter Property="TextColor" Value="Black" />
            <Setter Property="ViewBoxHeight" Value="50" />
            <Setter Property="ViewBoxWidth" Value="50" />
            <Setter Property="Duration" Value="0.8" />
        </Style>
    </ContentPage.Resources>
    <NavigationPage.TitleView>
        <Grid
            ColumnSpacing="10"
            HeightRequest="44"
            HorizontalOptions="FillAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="35" />
            </Grid.ColumnDefinitions>
            <ffImage:CachedImage
                Grid.Column="0"
                Margin="0,0,5,0"
                HeightRequest="27"
                HorizontalOptions="Start"
                Source="ic_close.png"
                VerticalOptions="Center">
                <ffImage:CachedImage.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ClosePageCommand}" />
                </ffImage:CachedImage.GestureRecognizers>
            </ffImage:CachedImage>
            <Label
                Grid.Column="1"
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Center"
                LineBreakMode="TailTruncation"
                Text="Xem lại video"
                TextColor="{DynamicResource WhiteColor}"
                VerticalOptions="Center" />
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <Grid RowDefinitions="Auto,Auto,2,*,Auto" RowSpacing="0">
            <!--  Khu vực tìm kiếm  -->
            <Grid Margin="10,5" ColumnDefinitions="*,Auto">
                <pancake:PancakeView
                    Padding="0"
                    BackgroundColor="{DynamicResource WhiteColor}"
                    CornerRadius="19"
                    HeightRequest="38"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="Center">
                    <pancake:PancakeView.Shadow>
                        <pancake:DropShadow
                            BlurRadius="2"
                            Offset="0,0"
                            Color="Black" />
                    </pancake:PancakeView.Shadow>
                    <pancake:PancakeView.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SelectVehicleCameraCommand}" />
                    </pancake:PancakeView.GestureRecognizers>
                    <StackLayout
                        Padding="10,0"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Horizontal"
                        VerticalOptions="Center">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SelectVehicleCameraCommand}" />
                        </StackLayout.GestureRecognizers>
                        <Entry
                            x:Name="entrySearch"
                            FontSize="14"
                            HorizontalOptions="FillAndExpand"
                            InputTransparent="True"
                            Placeholder="{i18n:TranslateResource Route_Label_SearchFishing}"
                            PlaceholderColor="{DynamicResource TextPlaceHolderColor}"
                            Text="{Binding SelectedVehiclePlates}"
                            TextColor="{DynamicResource TextPrimaryColor}"
                            VerticalOptions="Center">
                            <Entry.Effects>
                                <effects:BorderlessEffect />
                            </Entry.Effects>
                        </Entry>
                        <icons:IconView
                            Foreground="{DynamicResource BlackColor}"
                            HeightRequest="15"
                            HorizontalOptions="End"
                            Source="ic_sortdown"
                            VerticalOptions="Center"
                            WidthRequest="15" />
                    </StackLayout>
                </pancake:PancakeView>
                <pancake:PancakeView
                    Grid.Column="1"
                    Padding="0"
                    BackgroundColor="{DynamicResource WhiteColor}"
                    CornerRadius="19"
                    HeightRequest="38"
                    HorizontalOptions="End"
                    VerticalOptions="Center"
                    WidthRequest="120">
                    <pancake:PancakeView.Shadow>
                        <pancake:DropShadow
                            BlurRadius="2"
                            Offset="0,0"
                            Color="{DynamicResource BlackColor}" />
                    </pancake:PancakeView.Shadow>
                    <StackLayout
                        Padding="10,0,0,0"
                        HorizontalOptions="FillAndExpand"
                        Orientation="Horizontal"
                        VerticalOptions="FillAndExpand">
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding PushToFromDatePageCommand}" />
                        </StackLayout.GestureRecognizers>
                        <Entry
                            FontSize="{StaticResource FontSize12}"
                            HorizontalOptions="FillAndExpand"
                            InputTransparent="True"
                            Placeholder="Chọn ngày"
                            Text="{Binding SelectedDate, Converter={StaticResource DateConverter}}"
                            VerticalOptions="Center">
                            <Entry.Effects>
                                <effects:BorderlessEffect />
                            </Entry.Effects>
                        </Entry>
                        <icons:IconView
                            Margin="0,0,5,0"
                            Foreground="{DynamicResource PrimaryColor}"
                            HeightRequest="20"
                            HorizontalOptions="End"
                            Source="ic_calendar.png"
                            VerticalOptions="Center"
                            WidthRequest="20" />
                    </StackLayout>
                </pancake:PancakeView>
            </Grid>
            <!--  Chú thích biểu đồ  -->
            <Grid
                Grid.Row="1"
                Padding="10,0"
                ColumnDefinitions="*,*"
                RowDefinitions="Auto,Auto">
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <pancake:PancakeView
                        Padding="0"
                        BackgroundColor="#FF8A00"
                        CornerRadius="10"
                        HeightRequest="20"
                        VerticalOptions="Center"
                        WidthRequest="20" />
                    <Label Text="Thời gian có video" VerticalOptions="Center" />
                </StackLayout>
                <StackLayout
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="10">
                    <pancake:PancakeView
                        Padding="0"
                        BackgroundColor="#18A0FB"
                        CornerRadius="10"
                        HeightRequest="20"
                        VerticalOptions="Center"
                        WidthRequest="20" />
                    <Label
                        HorizontalOptions="Start"
                        Text="Thời gian video đã lưu"
                        VerticalOptions="Center" />
                </StackLayout>
                <Label
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="Start"
                    Text="Không tải được video khi phương tiện tắt máy."
                    TextColor="#18A0FB" />
            </Grid>

            <!--  Danh sách biểu đồ  -->
            <xforms:SfListView
                x:Name="listview"
                Grid.Row="3"
                Padding="5,0"
                AutoFitMode="DynamicHeight"
                IsScrollBarVisible="True"
                ItemSpacing="5"
                ItemsSource="{Binding ChartItemsSource, Mode=OneWay}"
                LoadMoreCommand="{Binding LoadMoreItemsCommand}"
                LoadMoreCommandParameter="{Binding Source={x:Reference listview}}"
                LoadMoreOption="Auto"
                SelectionBackgroundColor="#FFFBD8"
                SelectionGesture="Tap"
                SelectionMode="Single"
                TapCommand="{Binding GotoResreamTabCommand}">
                <xforms:SfListView.ItemTemplate>
                    <DataTemplate>
                        <!--<ScrollView Orientation="Horizontal">-->
                        <chart:SfChart
                            BackgroundColor="Transparent"
                            ChartPadding="10"
                            HeightRequest="180"
                            HorizontalOptions="FillAndExpand"
                            SideBySideSeriesPlacement="False"
                            VerticalOptions="Start">

                            <!--<chart:SfChart.ChartBehaviors>
                                <chart:ChartZoomPanBehavior
                                    EnableDoubleTap="True"
                                    EnablePanning="True"
                                    MaximumZoomLevel="10"
                                    ZoomMode="Y" />
                            </chart:SfChart.ChartBehaviors>-->
                            <chart:SfChart.ColorModel>
                                <chart:ChartColorModel Palette="Custom">
                                    <chart:ChartColorModel.CustomBrushes>
                                        <Color>#FF8A00</Color>
                                        <Color>#18A0FB</Color>
                                    </chart:ChartColorModel.CustomBrushes>
                                </chart:ChartColorModel>
                            </chart:SfChart.ColorModel>
                            <chart:SfChart.Title>
                                <chart:ChartTitle
                                    Margin="10,2,0,2"
                                    BackgroundColor="{DynamicResource PrimaryColor}"
                                    FontAttributes="Bold"
                                    FontFamily="{StaticResource myFontLatoBold}"
                                    Text="{Binding VehiclePlate}"
                                    TextAlignment="Start"
                                    TextColor="{DynamicResource WhiteColor}" />
                            </chart:SfChart.Title>
                            <chart:SfChart.PrimaryAxis>
                                <chart:CategoryAxis ArrangeByIndex="False" ShowMajorGridLines="True">
                                    <chart:CategoryAxis.MajorGridLineStyle>
                                        <chart:ChartLineStyle StrokeColor="{DynamicResource TextPrimaryColor}" />
                                    </chart:CategoryAxis.MajorGridLineStyle>
                                    <chart:CategoryAxis.LabelStyle>
                                        <chart:ChartAxisLabelStyle FontSize="12" TextColor="{DynamicResource PrimaryColor}" />
                                    </chart:CategoryAxis.LabelStyle>
                                </chart:CategoryAxis>
                            </chart:SfChart.PrimaryAxis>
                            <chart:SfChart.SecondaryAxis>
                                <chart:DateTimeAxis
                                    Interval="6"
                                    IntervalType="Hours"
                                    Maximum="{Binding Source={x:Reference root}, Path=BindingContext.MaxTime}"
                                    Minimum="{Binding Source={x:Reference root}, Path=BindingContext.MinTime}"
                                    RangePadding="None"
                                    ShowMajorGridLines="True">
                                    <chart:DateTimeAxis.MajorGridLineStyle>
                                        <chart:ChartLineStyle StrokeColor="{DynamicResource TextPrimaryColor}" />
                                    </chart:DateTimeAxis.MajorGridLineStyle>
                                    <chart:DateTimeAxis.LabelStyle>
                                        <chart:ChartAxisLabelStyle
                                            FontSize="12"
                                            LabelFormat="HH'h'"
                                            TextColor="{DynamicResource TextPrimaryColor}" />
                                    </chart:DateTimeAxis.LabelStyle>
                                </chart:DateTimeAxis>
                            </chart:SfChart.SecondaryAxis>
                            <chart:SfChart.Series>
                                <chart:RangeColumnSeries
                                    Width="0.3"
                                    High="EndTime"
                                    IsTransposed="True"
                                    ItemsSource="{Binding DeviceTimes}"
                                    Low="StartTime"
                                    XBindingPath="ChannelName" />
                                <chart:RangeColumnSeries
                                    Width="0.3"
                                    High="EndTime"
                                    IsTransposed="True"
                                    ItemsSource="{Binding CloudTimes}"
                                    Low="StartTime"
                                    XBindingPath="ChannelName" />
                            </chart:SfChart.Series>
                        </chart:SfChart>
                        <!--</ScrollView>-->
                    </DataTemplate>
                </xforms:SfListView.ItemTemplate>
            </xforms:SfListView>
            <busyIndicator:SfBusyIndicator Grid.RowSpan="4" IsBusy="{Binding IsBusy}" />
        </Grid>
    </ContentPage.Content>
</ContentPage>