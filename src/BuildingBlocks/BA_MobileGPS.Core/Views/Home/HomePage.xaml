<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BA_MobileGPS.Core.Views.HomePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:animation="clr-namespace:BA_MobileGPS.Core.Behaviors"
    xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:prism="http://prismlibrary.com"
    xmlns:sfListView="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
    prism:ViewModelLocator.AutowireViewModel="True">
    <ContentPage.Resources>
        <Style TargetType="sfListView:SfListView">
            <Setter Property="IsScrollBarVisible" Value="True" />
            <Setter Property="IsScrollingEnabled" Value="True" />
            <Setter Property="ItemSpacing" Value="10,10,0,0" />
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="SelectionBackgroundColor" Value="Transparent" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Margin" Value="0" />
        </Style>
        <Style x:Key="icon" TargetType="ff:CachedImage">
            <Setter Property="HeightRequest" Value="50" />
            <Setter Property="WidthRequest" Value="50" />
        </Style>
    </ContentPage.Resources>
    <ScrollView>
        <Grid>
            <Grid Padding="0" BackgroundColor="#F3F3F3">
                <ff:CachedImage
                    Aspect="AspectFill"
                    HeightRequest="200"
                    Source="top_background.jpg"
                    VerticalOptions="StartAndExpand" />
            </Grid>
            <Grid Padding="5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Padding="15,0" HeightRequest="100">
                    <StackLayout
                        HeightRequest="25"
                        Orientation="Horizontal"
                        VerticalOptions="End">
                        <ff:CachedImage Source="hotline_Icon.png">
                            <ff:CachedImage.Behaviors>
                                <animation:ViewTappedBehavior AnimationType="Scale" />
                            </ff:CachedImage.Behaviors>
                        </ff:CachedImage>
                    </StackLayout>
                    <StackLayout
                        HeightRequest="25"
                        HorizontalOptions="EndAndExpand"
                        Orientation="Horizontal"
                        Spacing="15"
                        VerticalOptions="End">
                        <ff:CachedImage Source="company_Icon.png">
                            <ff:CachedImage.Behaviors>
                                <animation:ViewTappedBehavior AnimationType="Scale" />
                            </ff:CachedImage.Behaviors>
                        </ff:CachedImage>
                        <ff:CachedImage Source="messenger_Icon.png">
                            <ff:CachedImage.Behaviors>
                                <animation:ViewTappedBehavior AnimationType="Scale" />
                            </ff:CachedImage.Behaviors>
                        </ff:CachedImage>
                        <ff:CachedImage Source="notification_Icon.png">
                            <ff:CachedImage.Behaviors>
                                <animation:ViewTappedBehavior AnimationType="Scale" />
                            </ff:CachedImage.Behaviors>
                        </ff:CachedImage>
                    </StackLayout>
                </Grid>
                <pancake:PancakeView
                    Grid.Row="1"
                    Margin="10,5"
                    CornerRadius="10">
                    <StackLayout Spacing="0">
                        <Grid Margin="10">
                            <Label StyleClass="GroupTitleLabel" Text="NỔI BẬT" />
                            <ff:CachedImage
                                HeightRequest="20"
                                HorizontalOptions="End"
                                Source="Hobbies_Icon.png"
                                VerticalOptions="Center">
                                <ff:CachedImage.Behaviors>
                                    <animation:ViewTappedBehavior AnimationType="Scale" />
                                </ff:CachedImage.Behaviors>
                            </ff:CachedImage>
                        </Grid>

                        <BoxView class="SlimLine" />

                        <sfListView:SfListView
                            HeightRequest="100"
                            IsScrollBarVisible="True"
                            ItemSize="80"
                            ItemsSource="{Binding FavouriteMenuItems}"
                            TapCommand="{Binding FavouriteItemsTappedCommand}">
                            <sfListView:SfListView.LayoutManager>
                                <sfListView:GridLayout SpanCount="1" />
                            </sfListView:SfListView.LayoutManager>
                            <sfListView:SfListView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout Spacing="10">
                                        <ff:CachedImage Source="{Binding IconMobile}" Style="{StaticResource icon}" />
                                        <Label Text="{Binding NameByCulture}" />
                                    </StackLayout>
                                </DataTemplate>
                            </sfListView:SfListView.ItemTemplate>

                        </sfListView:SfListView>
                    </StackLayout>
                </pancake:PancakeView>
                <Grid Grid.Row="2" Padding="20,0">
                    <Label StyleClass="GroupTitleLabel" Text="TIỆN ÍCH" />
                    <ff:CachedImage
                        HeightRequest="20"
                        HorizontalOptions="End"
                        Source="list_Icon.png">
                        <ff:CachedImage.Behaviors>
                            <animation:ViewTappedBehavior AnimationType="Scale" />
                        </ff:CachedImage.Behaviors>
                    </ff:CachedImage>
                </Grid>

                <BoxView
                    Grid.Row="3"
                    Margin="10,0"
                    class="SlimLine" />

                <Grid Grid.Row="4" HeightRequest="260">
                    <CarouselView IndicatorView="indicatorView" ItemsSource="{Binding AllListfeatures}">
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout>
                                    <sfListView:SfListView
                                        AutoFitMode="Height"
                                        HeightRequest="250"
                                        IsScrollBarVisible="False"
                                        ItemSize="120"
                                        ItemSpacing="20,0,20,0"
                                        ItemsSource="{Binding FeaturesItem}"
                                        TapCommand="{Binding FavouriteItemsTappedCommand}">
                                        <sfListView:SfListView.LayoutManager>
                                            <sfListView:GridLayout SpanCount="{Binding NumberOfColumns}" />
                                        </sfListView:SfListView.LayoutManager>
                                        <sfListView:SfListView.ItemTemplate>
                                            <DataTemplate>
                                                <StackLayout Spacing="10">
                                                    <ff:CachedImage Source="{Binding IconMobile}" Style="{StaticResource icon}" />
                                                    <Label Text="{Binding NameByCulture}" />
                                                </StackLayout>
                                            </DataTemplate>
                                        </sfListView:SfListView.ItemTemplate>
                                    </sfListView:SfListView>

                                </StackLayout>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                    <IndicatorView x:Name="indicatorView" Margin="0,0,0,10" />
                </Grid>

                <pancake:PancakeView
                    Grid.Row="5"
                    Margin="15,0"
                    CornerRadius="15">
                    <ff:CachedImage
                        Aspect="AspectFill"
                        HeightRequest="200"
                        Source="bot_background.jpg" />
                </pancake:PancakeView>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>