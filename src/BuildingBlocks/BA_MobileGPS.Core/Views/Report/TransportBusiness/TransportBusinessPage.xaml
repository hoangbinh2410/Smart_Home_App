<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BA_MobileGPS.Core.Views.Report.TransportBusiness.TransportBusinessPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:checkbox="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
    xmlns:controls="clr-namespace:BA_MobileGPS.Core.Controls"
    xmlns:effects="clr-namespace:BA_MobileGPS.Core.Effects"
    xmlns:ffImage="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:ffsvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
    xmlns:fontawesome="clr-namespace:FontAwesome;assembly=BA_MobileGPS.Utilities"
    xmlns:i18n="clr-namespace:BA_MobileGPS.Core.Helpers;assembly=BA_MobileGPS.Core"
    xmlns:local11="clr-namespace:BA_MobileGPS.Core.Views.Report.TransportBusiness"
    xmlns:locals="clr-namespace:BA_MobileGPS.Controls"
    xmlns:prism="http://prismlibrary.com"
    xmlns:sharpnado="clr-namespace:Sharpnado.MaterialFrame;assembly=Sharpnado.MaterialFrame"
    xmlns:syncDataGrid="clr-namespace:Syncfusion.SfDataGrid.XForms;assembly=Syncfusion.SfDataGrid.XForms"
    x:Name="this"
    Title="Báo cáo chuyến kinh doanh"
    prism:ViewModelLocator.AutowireViewModel="True"
    NavigationPage.BackButtonTitle="">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="colorDataColumn">#00ADE5</Color>
            <locals:CustomDataGridStyle x:Key="CustomDataGridStyle" />
            <local11:CustomTransportBusinessAggregate x:Key="CustomTransportBusinessConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <!--  Phần tiêu đề  -->
    <NavigationPage.TitleView>
        <Grid
            ColumnSpacing="10"
            HeightRequest="44"
            HorizontalOptions="FillAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ffImage:CachedImage
                Grid.Column="0"
                Margin="0,0,5,0"
                HeightRequest="27"
                HorizontalOptions="Start"
                Source="ic_close.png"
                VerticalOptions="Center">
                <ffImage:CachedImage.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ClosePageCommand}" />
                </ffImage:CachedImage.GestureRecognizers>
            </ffImage:CachedImage>
            <Label
                Grid.Column="1"
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Center"
                LineBreakMode="TailTruncation"
                Text="Báo cáo chuyến kinh doanh"
                TextColor="{DynamicResource WhiteColor}"
                VerticalOptions="Center" />
            <StackLayout
                Grid.Column="2"
                HorizontalOptions="End"
                Orientation="Horizontal">
                <controls:FontAwesomeIcon
                    Margin="5,0,5,0"
                    IsVisible="{Binding UserInfo.CompanyType, Converter={StaticResource IsCompanyConverter}}"
                    StyleClass="TopFontIconView"
                    Text="{x:Static fontawesome:FontAwesomeIcons.Building}">
                    <controls:FontAwesomeIcon.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SelectCompanyCommand}" />
                    </controls:FontAwesomeIcon.GestureRecognizers>
                </controls:FontAwesomeIcon>
                <controls:FontAwesomeIcon
                    Margin="5,0,10,0"
                    StyleClass="TopFontIconView"
                    Text="{x:Static fontawesome:FontAwesomeIcons.Cog}"
                    TextColor="White">
                    <controls:FontAwesomeIcon.GestureRecognizers>
                        <TapGestureRecognizer Tapped="HideableToolbarItem_Clicked" />
                    </controls:FontAwesomeIcon.GestureRecognizers>
                </controls:FontAwesomeIcon>
            </StackLayout>
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <AbsoluteLayout
            BackgroundColor="{DynamicResource WhiteColor}"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand">
            <!--  Nội dung dạng bảng  -->
            <Grid AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--  phần tìm kiếm  -->
                <StackLayout
                    Grid.Row="0"
                    Padding="10"
                    HorizontalOptions="FillAndExpand">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <!--  từ ngày  -->
                        <Frame
                            x:Name="txtfromdate"
                            Grid.Column="0"
                            Padding="0"
                            BackgroundColor="{DynamicResource WhiteColor}"
                            BorderColor="{DynamicResource GrayColor2}"
                            CornerRadius="5"
                            HasShadow="False"
                            HeightRequest="35"
                            HorizontalOptions="FillAndExpand"
                            IsClippedToBounds="True"
                            VerticalOptions="Center">
                            <StackLayout
                                Padding="5,0,5,0"
                                HorizontalOptions="FillAndExpand"
                                Orientation="Horizontal"
                                VerticalOptions="Center">
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding PushToFromDateTimePageCommand}" />
                                </StackLayout.GestureRecognizers>
                                <Entry
                                    FontSize="{DynamicResource FontSize11}"
                                    HorizontalOptions="FillAndExpand"
                                    InputTransparent="True"
                                    Placeholder=""
                                    Text="{Binding FromDate, Converter={StaticResource DateTimeConverter}}"
                                    VerticalOptions="Center">
                                    <Entry.Effects>
                                        <effects:BorderlessEffect />
                                    </Entry.Effects>
                                </Entry>
                                <controls:IconView
                                    Foreground="{DynamicResource PrimaryColor}"
                                    HeightRequest="20"
                                    HorizontalOptions="End"
                                    Source="ic_date_range_black.png"
                                    VerticalOptions="Center"
                                    WidthRequest="20" />
                            </StackLayout>
                        </Frame>
                        <!--  đến ngày  -->
                        <Frame
                            x:Name="txttodate"
                            Grid.Column="1"
                            Padding="0"
                            BackgroundColor="{DynamicResource WhiteColor}"
                            BorderColor="{DynamicResource GrayColor2}"
                            CornerRadius="5"
                            HasShadow="False"
                            HeightRequest="35"
                            HorizontalOptions="FillAndExpand"
                            IsClippedToBounds="True"
                            VerticalOptions="Center">
                            <StackLayout
                                Padding="5,0,5,0"
                                HorizontalOptions="FillAndExpand"
                                Orientation="Horizontal"
                                VerticalOptions="Center">
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding PushToEndDateTimePageCommand}" />
                                </StackLayout.GestureRecognizers>
                                <Entry
                                    FontSize="{DynamicResource FontSize11}"
                                    HorizontalOptions="FillAndExpand"
                                    InputTransparent="True"
                                    Placeholder=""
                                    Text="{Binding ToDate, Converter={StaticResource DateTimeConverter}}"
                                    VerticalOptions="Center">
                                    <Entry.Effects>
                                        <effects:BorderlessEffect />
                                    </Entry.Effects>
                                </Entry>
                                <controls:IconView
                                    Foreground="{DynamicResource PrimaryColor}"
                                    HeightRequest="20"
                                    HorizontalOptions="End"
                                    Source="ic_date_range_black.png"
                                    VerticalOptions="Center"
                                    WidthRequest="20" />
                            </StackLayout>
                        </Frame>
                        <!--  button tìm kiếm  -->
                        <StackLayout Grid.Column="2" Orientation="Horizontal">
                            <sharpnado:MaterialFrame
                                x:Name="btnKeySearch"
                                Padding="0"
                                CornerRadius="5"
                                HasShadow="False"
                                HeightRequest="35"
                                HorizontalOptions="CenterAndExpand"
                                LightThemeBackgroundColor="{DynamicResource PrimaryColor}"
                                VerticalOptions="CenterAndExpand"
                                WidthRequest="35">
                                <sharpnado:MaterialFrame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding SearchDataCommand}" />
                                </sharpnado:MaterialFrame.GestureRecognizers>
                                <controls:IconView
                                    Foreground="{DynamicResource WhiteColor}"
                                    HeightRequest="20"
                                    HorizontalOptions="Center"
                                    Source="ic_search.png"
                                    VerticalOptions="Center"
                                    WidthRequest="20" />
                            </sharpnado:MaterialFrame>
                        </StackLayout>
                    </Grid>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <!--  biển số xe  -->
                        <Frame
                            x:Name="cmbVihicle"
                            Grid.Column="0"
                            Padding="0"
                            BackgroundColor="{DynamicResource WhiteColor}"
                            BorderColor="{DynamicResource GrayColor2}"
                            CornerRadius="5"
                            HasShadow="False"
                            HeightRequest="35"
                            HorizontalOptions="FillAndExpand"
                            IsClippedToBounds="True"
                            VerticalOptions="Center">
                            <Grid
                                Padding="5,0,5,0"
                                ColumnDefinitions="*,Auto"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="Center">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding SelectVehicleReportCommand}" />
                                </Grid.GestureRecognizers>
                                <Entry
                                    Grid.Column="0"
                                    FontSize="{DynamicResource FontSizeTextPut11}"
                                    HorizontalOptions="FillAndExpand"
                                    InputTransparent="True"
                                    Placeholder="Phương tiện"
                                    Text="{Binding VehicleSelect.PrivateCode}"
                                    VerticalOptions="Center">
                                    <Entry.Effects>
                                        <effects:BorderlessEffect />
                                    </Entry.Effects>
                                </Entry>
                                <controls:IconView
                                    Grid.Column="1"
                                    Foreground="{DynamicResource BlackColor}"
                                    HeightRequest="15"
                                    HorizontalOptions="End"
                                    Source="ic_sortdown.png"
                                    VerticalOptions="Center"
                                    WidthRequest="15" />
                            </Grid>
                        </Frame>
                        <!--  lọc nâng cao  -->
                        <StackLayout Grid.Column="1" Orientation="Horizontal">
                            <!--  button lọc  -->
                            <sharpnado:MaterialFrame
                                Padding="0"
                                BorderColor="{DynamicResource PrimaryColor}"
                                CornerRadius="5"
                                HasShadow="False"
                                HeightRequest="35"
                                HorizontalOptions="CenterAndExpand"
                                LightThemeBackgroundColor="{DynamicResource WhiteColor}"
                                VerticalOptions="CenterAndExpand"
                                WidthRequest="35">
                                <sharpnado:MaterialFrame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding FilterDetailsCommand}" />
                                </sharpnado:MaterialFrame.GestureRecognizers>
                                <controls:IconView
                                    Foreground="{DynamicResource PrimaryColor}"
                                    HeightRequest="20"
                                    HorizontalOptions="Center"
                                    Source="ic_filter.png"
                                    VerticalOptions="Center"
                                    WidthRequest="20" />
                            </sharpnado:MaterialFrame>
                        </StackLayout>
                        <!--  ecxel  -->
                        <StackLayout Grid.Column="2" Orientation="Horizontal">
                            <!--  button ecxel  -->
                            <sharpnado:MaterialFrame
                                Padding="0"
                                CornerRadius="5"
                                HasShadow="False"
                                HeightRequest="35"
                                HorizontalOptions="CenterAndExpand"
                                LightThemeBackgroundColor="{DynamicResource PrimaryColor}"
                                VerticalOptions="CenterAndExpand"
                                WidthRequest="35">
                                <sharpnado:MaterialFrame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ExportExcellCommand}" />
                                </sharpnado:MaterialFrame.GestureRecognizers>
                                <controls:IconView
                                    Foreground="{DynamicResource WhiteColor}"
                                    HeightRequest="20"
                                    HorizontalOptions="Center"
                                    Source="ic_excel.png"
                                    VerticalOptions="Center"
                                    WidthRequest="20" />
                            </sharpnado:MaterialFrame>
                        </StackLayout>
                    </Grid>
                </StackLayout>
                <syncDataGrid:SfDataGrid
                    x:Name="dataGrid"
                    Grid.Row="1"
                    AllowLoadMore="True"
                    AllowResizingColumn="False"
                    AutoGenerateColumns="False"
                    ColumnSizer="Auto"
                    GridStyle="{StaticResource CustomDataGridStyle}"
                    HorizontalOptions="FillAndExpand"
                    IsBusy="{Binding IsBusy}"
                    IsVisible="{Binding HasData}"
                    ItemsSource="{Binding ListDataSearch}"
                    LoadMoreCommand="{Binding LoadMoreDataCommand}"
                    LoadMorePosition="Bottom"
                    LoadMoreText="{i18n:TranslateResource Common_Message_LoadMore}"
                    VerticalOptions="FillAndExpand"
                    VerticalOverScrollMode="None">

                    <syncDataGrid:SfDataGrid.Columns>

                        <!--  Số thứ tự  -->
                        <syncDataGrid:GridTemplateColumn
                            Width="30"
                            MappingName="OrderNumber"
                            TextAlignment="Center">
                            <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalOptions="FillAndExpand"
                                        Text="STT"
                                        TextColor="{DynamicResource WhiteColor}"
                                        VerticalOptions="FillAndExpand"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                            <syncDataGrid:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackLayout>
                                        <Label
                                            FontSize="{StaticResource FontSize10}"
                                            HorizontalOptions="FillAndExpand"
                                            Text="{Binding OrderNumber}"
                                            VerticalOptions="FillAndExpand"
                                            XAlign="Center"
                                            YAlign="Center" />
                                    </StackLayout>
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.CellTemplate>
                        </syncDataGrid:GridTemplateColumn>

                        <!--  Địa chỉ đi  -->
                        <syncDataGrid:GridTemplateColumn
                            Width="200"
                            ColumnSizer="Auto"
                            IsHidden="{Binding ShowStartAddress, Converter={StaticResource ShowHideColumnConverter}}"
                            MappingName="StartAddress"
                            TextAlignment="Center">
                            <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalOptions="FillAndExpand"
                                        Text="Điểm đi"
                                        TextColor="{DynamicResource WhiteColor}"
                                        VerticalOptions="FillAndExpand"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                            <syncDataGrid:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Label
                                        FontSize="{StaticResource FontSize10}"
                                        HorizontalOptions="FillAndExpand"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding StartAddress}"
                                        VerticalOptions="FillAndExpand"
                                        VerticalTextAlignment="Center"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.CellTemplate>
                        </syncDataGrid:GridTemplateColumn>

                        <!--  Địa chỉ đến  -->
                        <syncDataGrid:GridTemplateColumn
                            Width="200"
                            ColumnSizer="Auto"
                            IsHidden="{Binding ShowEndAddress, Converter={StaticResource ShowHideColumnConverter}}"
                            MappingName="EndAddress"
                            TextAlignment="Center">
                            <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalOptions="FillAndExpand"
                                        Text="Điểm đến"
                                        TextColor="{DynamicResource WhiteColor}"
                                        VerticalOptions="FillAndExpand"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                            <syncDataGrid:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Label
                                        FontSize="{StaticResource FontSize10}"
                                        HorizontalOptions="FillAndExpand"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding EndAddress}"
                                        VerticalOptions="FillAndExpand"
                                        VerticalTextAlignment="Center"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.CellTemplate>
                        </syncDataGrid:GridTemplateColumn>

                        <!--  Giờ đi  -->
                        <syncDataGrid:GridTemplateColumn
                            Width="120"
                            ColumnSizer="Auto"
                            IsHidden="{Binding ShowStartTime, Converter={StaticResource ShowHideColumnConverter}}"
                            MappingName="StartTime"
                            TextAlignment="Center">
                            <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalOptions="FillAndExpand"
                                        Text="Giờ đi"
                                        TextColor="{DynamicResource WhiteColor}"
                                        VerticalOptions="FillAndExpand"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                            <syncDataGrid:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Label
                                        FontSize="{StaticResource FontSize10}"
                                        HorizontalOptions="FillAndExpand"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding StartTime, Converter={StaticResource DateTimeConverter}}"
                                        VerticalOptions="FillAndExpand"
                                        VerticalTextAlignment="Center"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.CellTemplate>
                        </syncDataGrid:GridTemplateColumn>

                        <!--  Giờ đến  -->
                        <syncDataGrid:GridTemplateColumn
                            Width="120"
                            ColumnSizer="Auto"
                            IsHidden="{Binding ShowEndTime, Converter={StaticResource ShowHideColumnConverter}}"
                            MappingName="Date"
                            TextAlignment="Center">
                            <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalOptions="FillAndExpand"
                                        Text="Giờ đến"
                                        TextColor="{DynamicResource WhiteColor}"
                                        VerticalOptions="FillAndExpand"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                            <syncDataGrid:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Label
                                        FontSize="{StaticResource FontSize10}"
                                        HorizontalOptions="FillAndExpand"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding EndTime, Converter={StaticResource DateTimeConverter}}"
                                        VerticalOptions="FillAndExpand"
                                        VerticalTextAlignment="Center"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.CellTemplate>
                        </syncDataGrid:GridTemplateColumn>

                        <!--  Số phút hoạt động  -->
                        <syncDataGrid:GridTemplateColumn
                            Width="70"
                            ColumnSizer="Auto"
                            IsHidden="{Binding ShowTimeActive, Converter={StaticResource ShowHideColumnConverter}}"
                            MappingName="TotalTime"
                            TextAlignment="Center">
                            <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalOptions="FillAndExpand"
                                        Text="Số phút hoạt động"
                                        TextColor="{DynamicResource WhiteColor}"
                                        VerticalOptions="FillAndExpand"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                            <syncDataGrid:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Label
                                        FontSize="{StaticResource FontSize10}"
                                        HorizontalOptions="FillAndExpand"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding TotalTime}"
                                        VerticalOptions="FillAndExpand"
                                        VerticalTextAlignment="Center"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.CellTemplate>
                        </syncDataGrid:GridTemplateColumn>

                        <!--  Km GPS  -->
                        <syncDataGrid:GridTemplateColumn
                            Width="70"
                            ColumnSizer="Auto"
                            IsHidden="{Binding ShowKmGPS, Converter={StaticResource ShowHideColumnConverter}}"
                            MappingName="TotalKmGps"
                            TextAlignment="Center">
                            <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalOptions="FillAndExpand"
                                        Text="Km GPS"
                                        TextColor="{DynamicResource WhiteColor}"
                                        VerticalOptions="FillAndExpand"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                            <syncDataGrid:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Label
                                        FontSize="{StaticResource FontSize10}"
                                        HorizontalOptions="FillAndExpand"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding TotalKmGps}"
                                        VerticalOptions="FillAndExpand"
                                        VerticalTextAlignment="Center"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.CellTemplate>
                        </syncDataGrid:GridTemplateColumn>

                        <!--  KmCO  -->
                        <syncDataGrid:GridTemplateColumn
                            Width="70"
                            ColumnSizer="Auto"
                            IsHidden="{Binding ShowKmCO, Converter={StaticResource ShowHideColumnConverter}}"
                            MappingName="KmOfPulseMechanical"
                            TextAlignment="Center">
                            <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalOptions="FillAndExpand"
                                        Text="Km cơ"
                                        TextColor="{DynamicResource WhiteColor}"
                                        VerticalOptions="FillAndExpand"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                            <syncDataGrid:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Label
                                        FontSize="{StaticResource FontSize10}"
                                        HorizontalOptions="FillAndExpand"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding KmOfPulseMechanical}"
                                        VerticalOptions="FillAndExpand"
                                        VerticalTextAlignment="Center"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.CellTemplate>
                        </syncDataGrid:GridTemplateColumn>

                        <!--  Nhiên liệu tiêu thụ  -->
                        <syncDataGrid:GridTemplateColumn
                            Width="90"
                            ColumnSizer="Auto"
                            IsHidden="{Binding ShowQuotaFuelConsume, Converter={StaticResource ShowHideColumnConverter}}"
                            MappingName="TotalLitersOutsideStation"
                            TextAlignment="Center">
                            <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalOptions="FillAndExpand"
                                        Text="NL tiêu thụ"
                                        TextColor="{DynamicResource WhiteColor}"
                                        VerticalOptions="FillAndExpand"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                            <syncDataGrid:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Label
                                        FontSize="{StaticResource FontSize10}"
                                        HorizontalOptions="FillAndExpand"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding TotalLitersOutsideStation}"
                                        VerticalOptions="FillAndExpand"
                                        VerticalTextAlignment="Center"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.CellTemplate>
                        </syncDataGrid:GridTemplateColumn>

                        <!--  Định mức nhiên liệu  / 1km  -->
                        <syncDataGrid:GridTemplateColumn
                            Width="90"
                            ColumnSizer="Auto"
                            IsHidden="{Binding ShowQuotaFuelInKm, Converter={StaticResource ShowHideColumnConverter}}"
                            MappingName="ConstantNormsInKm"
                            TextAlignment="Center">
                            <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalOptions="FillAndExpand"
                                        Text="Định mức NL trên 1km"
                                        TextColor="{DynamicResource WhiteColor}"
                                        VerticalOptions="FillAndExpand"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                            <syncDataGrid:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Label
                                        FontSize="{StaticResource FontSize10}"
                                        HorizontalOptions="FillAndExpand"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding ConstantNorms}"
                                        VerticalOptions="FillAndExpand"
                                        VerticalTextAlignment="Center"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.CellTemplate>
                        </syncDataGrid:GridTemplateColumn>

                        <!--  NL tiêu thụ định mức  -->
                        <syncDataGrid:GridTemplateColumn
                            Width="90"
                            ColumnSizer="Auto"
                            IsHidden="{Binding ShowQuotaFuel, Converter={StaticResource ShowHideColumnConverter}}"
                            MappingName="Norms"
                            TextAlignment="Center">
                            <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalOptions="FillAndExpand"
                                        Text="NL tiêu thụ định mức"
                                        TextColor="{DynamicResource WhiteColor}"
                                        VerticalOptions="FillAndExpand"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                            <syncDataGrid:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Label
                                        FontSize="{StaticResource FontSize10}"
                                        HorizontalOptions="FillAndExpand"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding Norms}"
                                        VerticalOptions="FillAndExpand"
                                        VerticalTextAlignment="Center"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.CellTemplate>
                        </syncDataGrid:GridTemplateColumn>

                        <!--  Lộ trình  -->

                        <syncDataGrid:GridTemplateColumn
                            Width="80"
                            MappingName="FK_VehicleID"
                            TextAlignment="Center">
                            <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalOptions="FillAndExpand"
                                        Text="Lộ trình"
                                        TextColor="{DynamicResource WhiteColor}"
                                        VerticalOptions="FillAndExpand"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                            <syncDataGrid:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{Binding Path=BindingContext.PushToViewRouteCommand, Source={x:Reference Name=dataGrid}}"
                                                CommandParameter="{Binding OrderNumber}"
                                                NumberOfTapsRequired="1" />
                                        </StackLayout.GestureRecognizers>
                                        <Label
                                            FontSize="{StaticResource FontSize10}"
                                            HorizontalOptions="FillAndExpand"
                                            Text="Lộ trình"
                                            TextColor="{DynamicResource colorDataColumn}"
                                            VerticalOptions="FillAndExpand"
                                            XAlign="Center"
                                            YAlign="Center" />
                                    </StackLayout>
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.CellTemplate>
                        </syncDataGrid:GridTemplateColumn>

                        <!--  Hình ảnh  -->
                        <syncDataGrid:GridTemplateColumn
                            Width="80"
                            MappingName="IsVideoCam"
                            TextAlignment="Center">
                            <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Label
                                        FontAttributes="Bold"
                                        HorizontalOptions="FillAndExpand"
                                        Text="Xem"
                                        TextColor="{DynamicResource WhiteColor}"
                                        VerticalOptions="FillAndExpand"
                                        XAlign="Center"
                                        YAlign="Center" />
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                            <syncDataGrid:GridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackLayout
                                        HorizontalOptions="CenterAndExpand"
                                        IsVisible="{Binding IsVideoCam}"
                                        VerticalOptions="CenterAndExpand">
                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{Binding Path=BindingContext.PushToViewPicturnCommand, Source={x:Reference Name=dataGrid}}"
                                                CommandParameter="{Binding OrderNumber}"
                                                NumberOfTapsRequired="1" />
                                        </StackLayout.GestureRecognizers>
                                        <Label
                                            FontSize="{StaticResource FontSize10}"
                                            HorizontalOptions="FillAndExpand"
                                            Text="Xem"
                                            TextColor="{DynamicResource colorDataColumn}"
                                            VerticalOptions="FillAndExpand"
                                            XAlign="Center"
                                            YAlign="Center" />
                                    </StackLayout>
                                </DataTemplate>
                            </syncDataGrid:GridTemplateColumn.CellTemplate>
                        </syncDataGrid:GridTemplateColumn>

                    </syncDataGrid:SfDataGrid.Columns>
                    <!--  Sum  -->
                    <syncDataGrid:SfDataGrid.TableSummaryRows>
                        <syncDataGrid:GridTableSummaryRow ShowSummaryInRow="False">
                            <syncDataGrid:GridTableSummaryRow.SummaryColumns>

                                <syncDataGrid:GridSummaryColumn
                                    Name="SumName"
                                    Format="{}{Sum}"
                                    MappingName="StartAddress"
                                    SummaryType="DoubleAggregate">
                                    <syncDataGrid:GridSummaryColumn.Template>
                                        <DataTemplate>
                                            <StackLayout Orientation="Horizontal">
                                                <Label
                                                    FontAttributes="Bold"
                                                    HorizontalOptions="FillAndExpand"
                                                    HorizontalTextAlignment="Center"
                                                    LineBreakMode="NoWrap"
                                                    Text="Tổng"
                                                    TextColor="Black"
                                                    VerticalOptions="FillAndExpand"
                                                    VerticalTextAlignment="Center" />
                                            </StackLayout>
                                        </DataTemplate>
                                    </syncDataGrid:GridSummaryColumn.Template>
                                </syncDataGrid:GridSummaryColumn>

                                <syncDataGrid:GridSummaryColumn
                                    Name="SumTotalTimes"
                                    CustomAggregate="{StaticResource CustomTransportBusinessConverter}"
                                    Format="{}{TotalTimes}"
                                    MappingName="TotalTime"
                                    SummaryType="Custom" />

                                <syncDataGrid:GridSummaryColumn
                                    Name="SumTotalKm"
                                    CustomAggregate="{StaticResource CustomTransportBusinessConverter}"
                                    Format="{}{SumTotalKm}"
                                    MappingName="TotalKmGps"
                                    SummaryType="Custom" />

                                <syncDataGrid:GridSummaryColumn
                                    Name="SumTotalKmMechanical"
                                    CustomAggregate="{StaticResource CustomTransportBusinessConverter}"
                                    Format="{}{TotalKmMechanical}"
                                    MappingName="KmOfPulseMechanical"
                                    SummaryType="Custom" />

                                <syncDataGrid:GridSummaryColumn
                                    Name="SumTotalNorms"
                                    CustomAggregate="{StaticResource CustomTransportBusinessConverter}"
                                    Format="{}{TotalNorms}"
                                    MappingName="TotalLitersOutsideStation"
                                    SummaryType="Custom" />

                                <syncDataGrid:GridSummaryColumn
                                    Name="SumTotalConstantNorms"
                                    CustomAggregate="{StaticResource CustomTransportBusinessConverter}"
                                    Format="{}{TotalConstantNorms}"
                                    MappingName="Norms"
                                    SummaryType="Custom" />

                            </syncDataGrid:GridTableSummaryRow.SummaryColumns>
                        </syncDataGrid:GridTableSummaryRow>
                    </syncDataGrid:SfDataGrid.TableSummaryRows>
                </syncDataGrid:SfDataGrid>
                <StackLayout
                    Grid.Row="1"
                    BackgroundColor="{DynamicResource WhiteColor}"
                    HorizontalOptions="Center"
                    IsVisible="{Binding HasData, Converter={StaticResource InvertBooleanConverter}}"
                    Spacing="10"
                    VerticalOptions="Center">
                    <ffsvg:SvgCachedImage
                        Margin="{x:OnIdiom Phone='0,0,0,0',
                                           Desktop='0',
                                           Tablet='0'}"
                        HeightRequest="200"
                        Source="NoItem.svg"
                        VerticalOptions="Center"
                        WidthRequest="200" />
                    <Label
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="{i18n:TranslateResource Common_Message_NoData}"
                        TextColor="{DynamicResource TextPrimaryColor}" />
                </StackLayout>
            </Grid>
            <!--  Cài đặt ẩn hiện cột  -->
            <Grid
                x:Name="showhideColumn"
                AbsoluteLayout.LayoutBounds="0,1,1,1"
                AbsoluteLayout.LayoutFlags="All"
                RowSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackLayout
                    Grid.Row="0"
                    BackgroundColor="Gray"
                    HorizontalOptions="Fill"
                    Opacity="0.2"
                    VerticalOptions="Fill">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                    </StackLayout.GestureRecognizers>
                </StackLayout>
                <Frame
                    Grid.Row="1"
                    Padding="10"
                    BackgroundColor="{DynamicResource WhiteColor}"
                    CornerRadius="0"
                    HasShadow="False"
                    HorizontalOptions="FillAndExpand">
                    <StackLayout Spacing="10">
                        <Label
                            HorizontalOptions="Start"
                            Style="{DynamicResource LabelItem}"
                            Text="CÀI ĐẶT ẨN HIỆN THÔNG TIN"
                            TextColor="{DynamicResource PrimaryColor}" />
                        <Grid
                            Margin="10,0,10,0"
                            HorizontalOptions="FillAndExpand"
                            RowSpacing="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".5*" />
                                <ColumnDefinition Width=".5*" />
                            </Grid.ColumnDefinitions>

                            <!--  Giờ đi  -->
                            <checkbox:SfCheckBox
                                Grid.Row="0"
                                Grid.Column="0"
                                CheckedColor="{DynamicResource PrimaryColor}"
                                CornerRadius="5"
                                FontSize="13"
                                IsChecked="{Binding ShowStartTime}"
                                Text="Giờ đi" />

                            <!--  Số phút hoạt động  -->
                            <checkbox:SfCheckBox
                                Grid.Row="0"
                                Grid.Column="1"
                                CheckedColor="{DynamicResource PrimaryColor}"
                                CornerRadius="5.0"
                                FontSize="13"
                                IsChecked="{Binding ShowTimeActive}"
                                Text="Thời gian" />

                            <!--  Giờ đến  -->
                            <checkbox:SfCheckBox
                                Grid.Row="1"
                                Grid.Column="0"
                                CheckedColor="{DynamicResource PrimaryColor}"
                                CornerRadius="5"
                                FontSize="13"
                                IsChecked="{Binding ShowEndTime}"
                                Text="Vào trạm" />

                            <!--  Km GPS  -->
                            <checkbox:SfCheckBox
                                Grid.Row="1"
                                Grid.Column="1"
                                CheckedColor="{DynamicResource PrimaryColor}"
                                CornerRadius="5.0"
                                FontSize="13"
                                IsChecked="{Binding ShowKmGPS}"
                                Text="Km GPS" />

                            <!--  Điểm đi  -->
                            <checkbox:SfCheckBox
                                Grid.Row="2"
                                Grid.Column="0"
                                CheckedColor="{DynamicResource PrimaryColor}"
                                CornerRadius="5"
                                FontSize="13"
                                IsChecked="{Binding ShowStartAddress}"
                                Text="Điểm đi" />

                            <!--  Tiêu thụ  -->
                            <checkbox:SfCheckBox
                                Grid.Row="2"
                                Grid.Column="1"
                                CheckedColor="{DynamicResource PrimaryColor}"
                                CornerRadius="5.0"
                                FontSize="13"
                                IsChecked="{Binding ShowQuotaFuelConsume}"
                                Text="Tiêu thụ" />

                            <!--  Điểm đến  -->
                            <checkbox:SfCheckBox
                                Grid.Row="3"
                                Grid.Column="0"
                                CheckedColor="{DynamicResource PrimaryColor}"
                                CornerRadius="5"
                                FontSize="13"
                                IsChecked="{Binding ShowEndAddress}"
                                Text="Điểm đến" />

                            <!--  Định mức tiêu thụ  -->
                            <checkbox:SfCheckBox
                                Grid.Row="3"
                                Grid.Column="1"
                                CheckedColor="{DynamicResource PrimaryColor}"
                                CornerRadius="5.0"
                                FontSize="13"
                                IsChecked="{Binding ShowQuotaFuel}"
                                Text="Định mức tiêu thụ" />

                            <!--  button save  -->
                            <StackLayout
                                Grid.Row="4"
                                Grid.ColumnSpan="2"
                                Padding="40,20,40,20"
                                HorizontalOptions="FillAndExpand"
                                Orientation="Horizontal">
                                <Button
                                    BackgroundColor="{DynamicResource WhiteColor}"
                                    BorderColor="{DynamicResource PrimaryColor}"
                                    BorderRadius="0"
                                    BorderWidth="1"
                                    Clicked="HideableToolbarItem_Clicked"
                                    FontAttributes="Bold"
                                    FontSize="12"
                                    HeightRequest="40"
                                    HorizontalOptions="FillAndExpand"
                                    Text="{i18n:TranslateResource Common_Button_Close,
                                                                  Converter={StaticResource UpperCaseConverter}}"
                                    TextColor="{DynamicResource PrimaryColor}" />

                                <Button
                                    BackgroundColor="{DynamicResource PrimaryColor}"
                                    BorderRadius="0"
                                    Clicked="Button_Clicked"
                                    Command="{Binding SaveComlumnHideCommand}"
                                    FontAttributes="Bold"
                                    FontSize="12"
                                    HeightRequest="40"
                                    HorizontalOptions="FillAndExpand"
                                    Text="{i18n:TranslateResource Common_Button_SaveShowHideColumn,
                                                                  Converter={StaticResource UpperCaseConverter}}"
                                    TextColor="{DynamicResource WhiteColor}" />
                            </StackLayout>
                        </Grid>
                    </StackLayout>
                </Frame>
            </Grid>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>