    <!--  Nội dung  -->
    <ContentPage.Content>
        <ScrollView>
            <Grid
                RowDefinitions="*,Auto"
                RowSpacing="0"
                VerticalOptions="FillAndExpand">
                <StackLayout
                    Grid.Row="0"
                    Padding="10"
                    BackgroundColor="{DynamicResource WhiteColor}"
                    HorizontalOptions="FillAndExpand"
                    Spacing="15"
                    VerticalOptions="FillAndExpand">
                    <StackLayout HorizontalOptions="FillAndExpand" Spacing="10">
                        <Label
                            FontSize="{DynamicResource FontSizeHeader}"
                            HorizontalOptions="StartAndExpand"
                            LineBreakMode="MiddleTruncation"
                            Text="{i18n:TranslateResource ReportBusiness_Header_TitleStartAddress}"
                            TextColor="Black"
                            VerticalOptions="Center" />
                        <Frame
                            x:Name="cmbStartAddress"
                            Padding="0,5,0,0"
                            BackgroundColor="{DynamicResource WhiteColor}"
                            BorderColor="{DynamicResource GrayColor2}"
                            CornerRadius="5"
                            HasShadow="False"
                            HeightRequest="35"
                            HorizontalOptions="FillAndExpand"
                            IsClippedToBounds="True"
                            VerticalOptions="Center">
                            <Grid
                                Padding="5,0,5,0"
                                ColumnDefinitions="*,Auto"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="Center">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding PushLandmarkCommandStart}" />
                                </Grid.GestureRecognizers>
                                <Entry
                                    Grid.Column="0"
                                    FontSize="{DynamicResource FontSizeTextPut11}"
                                    HorizontalOptions="FillAndExpand"
                                    InputTransparent="True"
                                    Placeholder="{i18n:TranslateResource ReportDetailedFilter_Combobox_ChoosingDeparture}"
                                    Text="{Binding SelectedLocationStart.Value}"
                                    VerticalOptions="Center">
                                    <Entry.Effects>
                                        <effects:BorderlessEffect />
                                    </Entry.Effects>
                                </Entry>
                                <controls:IconView
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    Foreground="{DynamicResource BlackColor}"
                                    HeightRequest="15"
                                    HorizontalOptions="EndAndExpand"
                                    Source="ic_sortdown.png"
                                    VerticalOptions="Center"
                                    WidthRequest="15" />
                            </Grid>
                        </Frame>
                    </StackLayout>
                    <StackLayout HorizontalOptions="FillAndExpand" Spacing="10">
                        <Label
                            FontSize="{DynamicResource FontSizeHeader}"
                            HorizontalOptions="StartAndExpand"
                            LineBreakMode="MiddleTruncation"
                            Text="{i18n:TranslateResource ReportBusiness_Header_TitleEndAddress}"
                            TextColor="Black"
                            VerticalOptions="Center" />
                        <Frame
                            x:Name="cmbEndAddress"
                            Padding="0,5,0,0"
                            BackgroundColor="{DynamicResource WhiteColor}"
                            BorderColor="{DynamicResource GrayColor2}"
                            CornerRadius="5"
                            HasShadow="False"
                            HeightRequest="35"
                            HorizontalOptions="FillAndExpand"
                            IsClippedToBounds="True"
                            VerticalOptions="Center">
                            <Grid
                                Padding="5,0,5,0"
                                ColumnDefinitions="*,Auto"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="Center">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding PushLandmarkCommandEnd}" />
                                </Grid.GestureRecognizers>
                                <Entry
                                    Grid.Column="0"
                                    FontSize="{DynamicResource FontSizeTextPut11}"
                                    HorizontalOptions="FillAndExpand"
                                    InputTransparent="True"
                                    Placeholder="{i18n:TranslateResource ReportDetailedFilter_Combobox_ChoosingArrival}"
                                    Text="{Binding SelectedLocationEnd.Value}"
                                    VerticalOptions="Center">
                                    <Entry.Effects>
                                        <effects:BorderlessEffect />
                                    </Entry.Effects>
                                </Entry>
                                <controls:IconView
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    Foreground="{DynamicResource BlackColor}"
                                    HeightRequest="15"
                                    HorizontalOptions="EndAndExpand"
                                    Source="ic_sortdown.png"
                                    VerticalOptions="Center"
                                    WidthRequest="15" />
                            </Grid>
                        </Frame>
                    </StackLayout>
                    <StackLayout HorizontalOptions="FillAndExpand" Spacing="10">
                        <Label
                            FontSize="{DynamicResource FontSizeHeader}"
                            HorizontalOptions="StartAndExpand"
                            LineBreakMode="MiddleTruncation"
                            Text="{i18n:TranslateResource ReportDetailedFilter_Label_MinimumDistance}"
                            TextColor="Black"
                            VerticalOptions="Center" />
                        <Frame
                            x:Name="inputMinimum"
                            Padding="0,5,0,0"
                            BackgroundColor="{DynamicResource WhiteColor}"
                            BorderColor="{DynamicResource GrayColor2}"
                            CornerRadius="5"
                            HasShadow="False"
                            HeightRequest="35"
                            HorizontalOptions="FillAndExpand"
                            IsClippedToBounds="True"
                            VerticalOptions="Center">
                            <Grid
                                Padding="5,0,5,0"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="Center">
                                <Entry
                                    FontSize="{DynamicResource FontSizeTextPut11}"
                                    HorizontalOptions="FillAndExpand"
                                    Keyboard="Numeric"
                                    Text="{Binding MinKm}"
                                    VerticalOptions="Center">
                                    <Entry.Effects>
                                        <effects:BorderlessEffect />
                                    </Entry.Effects>
                                </Entry>
                            </Grid>
                        </Frame>
                    </StackLayout>
                    <StackLayout HorizontalOptions="FillAndExpand" Spacing="10">
                        <Label
                            FontSize="{DynamicResource FontSizeHeader}"
                            HorizontalOptions="StartAndExpand"
                            LineBreakMode="MiddleTruncation"
                            Text="{i18n:TranslateResource ReportDetailedFilter_Label_MaximumDistance}"
                            TextColor="Black"
                            VerticalOptions="Center" />
                        <Frame
                            x:Name="inputMaximum"
                            Padding="0,5,0,0"
                            BackgroundColor="{DynamicResource WhiteColor}"
                            BorderColor="{DynamicResource GrayColor2}"
                            CornerRadius="5"
                            HasShadow="False"
                            HeightRequest="35"
                            HorizontalOptions="FillAndExpand"
                            IsClippedToBounds="True"
                            VerticalOptions="Center">
                            <Grid
                                Padding="5,0,5,0"
                                ColumnDefinitions="*"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="Center">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding PushEndAddressCommand}" />
                                </Grid.GestureRecognizers>
                                <Entry
                                    FontSize="{DynamicResource FontSizeTextPut11}"
                                    HorizontalOptions="FillAndExpand"
                                    Keyboard="Numeric"
                                    Text="{Binding MaxKm}"
                                    VerticalOptions="Center">
                                    <Entry.Effects>
                                        <effects:BorderlessEffect />
                                    </Entry.Effects>
                                </Entry>
                            </Grid>
                        </Frame>
                    </StackLayout>
                    <StackLayout HorizontalOptions="FillAndExpand" Spacing="10">
                        <checkbox:SfCheckBox
                            CheckedColor="{DynamicResource PrimaryColor}"
                            FontSize="16"
                            HorizontalOptions="Start"
                            IsChecked="{Binding ISCheckAddress}"
                            Text="{i18n:TranslateResource ReportDetailedFilter_CheckBox_NoChoosing}"
                            TextColor="Black" />
                    </StackLayout>
                </StackLayout>
                <StackLayout
                    Grid.Row="1"
                    BackgroundColor="{DynamicResource WhiteColor}"
                    HeightRequest="60"
                    Spacing="0">
                    <BoxView StyleClass="SlimLine" VerticalOptions="StartAndExpand" />
                    <buttons:SfButton
                        x:Name="sfButtonAddExpense"
                        BackgroundColor="{DynamicResource PrimaryColor}"
                        Command="{Binding ExcuteFilterCommand}"
                        CornerRadius="20"
                        HorizontalOptions="CenterAndExpand"
                        Text="{i18n:TranslateResource ReportDetailedFilter_btn_Apply}"
                        VerticalOptions="StartAndExpand"
                        WidthRequest="200" />
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>