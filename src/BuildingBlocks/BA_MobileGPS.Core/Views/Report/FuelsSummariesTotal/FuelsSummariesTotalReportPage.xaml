<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BA_MobileGPS.Core.Views.FuelsSummariesTotalReportPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:checkbox="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
    xmlns:controls="clr-namespace:BA_MobileGPS.Core.Controls"
    xmlns:effects="clr-namespace:BA_MobileGPS.Core.Effects"
    xmlns:fontawesome="clr-namespace:FontAwesome;assembly=BA_MobileGPS.Utilities"
    xmlns:i18n="clr-namespace:BA_MobileGPS.Core.Helpers;assembly=BA_MobileGPS.Core"
    xmlns:locals="clr-namespace:BA_MobileGPS.Controls"
    xmlns:sfPopup="clr-namespace:Syncfusion.XForms.PopupLayout;assembly=Syncfusion.SfPopupLayout.XForms"
    xmlns:sharpnado="clr-namespace:Sharpnado.MaterialFrame;assembly=Sharpnado.MaterialFrame"
    xmlns:syncDataGrid="clr-namespace:Syncfusion.SfDataGrid.XForms;assembly=Syncfusion.SfDataGrid.XForms"
    x:Name="this"
    Title="{i18n:TranslateResource FuelsSummariesReportTotal_Label_TilePage}"
    NavigationPage.BackButtonTitle="">
    <ContentPage.Resources>
        <ResourceDictionary>
            <locals:CustomDataGridStyle x:Key="CustomDataGridStyle" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <NavigationPage.TitleView>
        <Grid
            ColumnSpacing="10"
            HeightRequest="44"
            HorizontalOptions="FillAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Center"
                LineBreakMode="MiddleTruncation"
                Text="{i18n:TranslateResource FuelsSummariesReport_Label_TilePage}"
                TextColor="{StaticResource WhiteColor}"
                VerticalOptions="Center" />
            <controls:FontAwesomeIcon
                Grid.Column="1"
                Margin="5,0,5,0"
                IsVisible="{Binding UserInfo.CompanyType, Converter={StaticResource IsCompanyConverter}}"
                StyleClass="TopIconView"
                Text="{x:Static fontawesome:FontAwesomeIcons.Building}">
                <controls:FontAwesomeIcon.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SelectCompanyCommand}" />
                </controls:FontAwesomeIcon.GestureRecognizers>
            </controls:FontAwesomeIcon>
            <controls:FontAwesomeIcon
                Grid.Column="2"
                Margin="5,0,5,0"
                StyleClass="TopIconView"
                Text="{x:Static fontawesome:FontAwesomeIcons.Cog}">
                <controls:FontAwesomeIcon.GestureRecognizers>
                    <TapGestureRecognizer Tapped="HideableToolbarItem_Clicked" />
                </controls:FontAwesomeIcon.GestureRecognizers>
            </controls:FontAwesomeIcon>
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <sfPopup:SfPopupLayout x:Name="popupLayout" IsOpen="{Binding DisplayPopup}">
            <sfPopup:SfPopupLayout.PopupView>
                <sfPopup:PopupView HeaderTitle="BA GPS" ShowFooter="False">
                    <sfPopup:PopupView.ContentTemplate>
                        <DataTemplate>
                            <Grid Padding="0,0,10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <StackLayout
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    HorizontalOptions="FillAndExpand"
                                    WidthRequest="40">
                                    <controls:IconView
                                        Margin="0,3,0,0"
                                        Foreground="Black"
                                        HeightRequest="20"
                                        HorizontalOptions="Center"
                                        Source="ic_checked.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />
                                </StackLayout>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Text="{i18n:TranslateResource FuelsSummariesReportTotal_Label_PopupStart}" />
                                <StackLayout
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    HorizontalOptions="FillAndExpand"
                                    WidthRequest="40">
                                    <controls:IconView
                                        Margin="0,3,0,0"
                                        Foreground="Black"
                                        HeightRequest="20"
                                        HorizontalOptions="Center"
                                        Source="ic_checked.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />
                                </StackLayout>
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Text="{i18n:TranslateResource FuelsSummariesReportTotal_Label_PopupEnd}" />
                                <StackLayout
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    HorizontalOptions="FillAndExpand"
                                    WidthRequest="40">
                                    <controls:IconView
                                        Margin="0,3,0,0"
                                        Foreground="Black"
                                        HeightRequest="20"
                                        HorizontalOptions="Center"
                                        Source="ic_checked.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />
                                </StackLayout>
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Text="{i18n:TranslateResource FuelsSummariesReportTotal_Label_PopupLastLits}" />
                                <StackLayout
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    HorizontalOptions="FillAndExpand"
                                    WidthRequest="40">
                                    <controls:IconView
                                        Margin="0,3,0,0"
                                        Foreground="Black"
                                        HeightRequest="20"
                                        HorizontalOptions="Center"
                                        Source="ic_checked.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />
                                </StackLayout>
                                <Label
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Text="{i18n:TranslateResource FuelsSummariesReportTotal_Label_PopupLitsConsumable}" />
                            </Grid>
                        </DataTemplate>
                    </sfPopup:PopupView.ContentTemplate>
                </sfPopup:PopupView>
            </sfPopup:SfPopupLayout.PopupView>
            <sfPopup:SfPopupLayout.Content>
                <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                    <Grid AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <!--  phần tìm kiếm  -->
                        <Grid Padding="10" HorizontalOptions="FillAndExpand">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <!--  từ ngày  -->
                            <Frame
                                x:Name="txtfromdate"
                                Grid.Row="0"
                                Grid.Column="0"
                                Padding="0"
                                BackgroundColor="White"
                                BorderColor="{StaticResource GrayColor2}"
                                CornerRadius="5"
                                HasShadow="False"
                                HeightRequest="35"
                                HorizontalOptions="FillAndExpand"
                                IsClippedToBounds="True"
                                VerticalOptions="Center">
                                <StackLayout
                                    Padding="5,0,5,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal"
                                    VerticalOptions="Center">
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding PushToFromDatePageCommand}" />
                                    </StackLayout.GestureRecognizers>
                                    <Entry
                                        FontSize="{StaticResource FontSize12}"
                                        HorizontalOptions="FillAndExpand"
                                        InputTransparent="True"
                                        Placeholder="{i18n:TranslateResource Common_Label_PlaceHolder_FromDate}"
                                        Text="{Binding FromDate, Converter={StaticResource DateConverter}}"
                                        VerticalOptions="Center">
                                        <Entry.Effects>
                                            <effects:BorderlessEffect />
                                        </Entry.Effects>
                                    </Entry>
                                    <controls:IconView
                                        Foreground="Black"
                                        HeightRequest="20"
                                        HorizontalOptions="End"
                                        Source="ic_date_range_black.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />
                                </StackLayout>
                            </Frame>
                            <!--  đến ngày  -->
                            <Frame
                                x:Name="txttodate"
                                Grid.Row="0"
                                Grid.Column="1"
                                Padding="0"
                                BackgroundColor="White"
                                BorderColor="{StaticResource GrayColor2}"
                                CornerRadius="5"
                                HasShadow="False"
                                HeightRequest="35"
                                HorizontalOptions="FillAndExpand"
                                IsClippedToBounds="True"
                                VerticalOptions="Center">
                                <StackLayout
                                    Padding="5,0,5,0"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal"
                                    VerticalOptions="Center">
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding PushToEndDatePageCommand}" />
                                    </StackLayout.GestureRecognizers>
                                    <Entry
                                        FontSize="{StaticResource FontSize12}"
                                        HorizontalOptions="FillAndExpand"
                                        InputTransparent="True"
                                        Placeholder="{i18n:TranslateResource Common_Label_PlaceHolder_ToDate}"
                                        Text="{Binding ToDate, Converter={StaticResource DateConverter}}"
                                        VerticalOptions="Center">
                                        <Entry.Effects>
                                            <effects:BorderlessEffect />
                                        </Entry.Effects>
                                    </Entry>
                                    <controls:IconView
                                        Foreground="Black"
                                        HeightRequest="20"
                                        HorizontalOptions="End"
                                        Source="ic_date_range_black.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />
                                </StackLayout>
                            </Frame>
                            <!--  button tìm kiếm  -->
                            <StackLayout
                                Grid.Row="0"
                                Grid.Column="2"
                                Orientation="Horizontal">
                                <sharpnado:MaterialFrame
                                    x:Name="btnKeySearch"
                                    Padding="0"
                                    CornerRadius="5"
                                    HasShadow="False"
                                    HeightRequest="35"
                                    HorizontalOptions="Start"
                                    LightThemeBackgroundColor="{StaticResource PrimaryColor}"
                                    VerticalOptions="CenterAndExpand"
                                    WidthRequest="35">
                                    <sharpnado:MaterialFrame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding SearchDataCommand}" />
                                    </sharpnado:MaterialFrame.GestureRecognizers>
                                    <controls:IconView
                                        Foreground="White"
                                        HeightRequest="20"
                                        HorizontalOptions="Center"
                                        Source="ic_search.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />
                                </sharpnado:MaterialFrame>
                                <!--  button xuất Excel  -->
                            </StackLayout>
                            <!--  button ecxel  -->
                            <StackLayout
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Orientation="Horizontal">
                                <!--  biển số xe  -->
                                <Frame
                                    x:Name="cmbVihicle"
                                    Padding="0"
                                    BackgroundColor="White"
                                    BorderColor="{StaticResource GrayColor2}"
                                    CornerRadius="5"
                                    HasShadow="False"
                                    HeightRequest="35"
                                    HorizontalOptions="FillAndExpand"
                                    IsClippedToBounds="True"
                                    VerticalOptions="Center">
                                    <StackLayout
                                        Padding="5,0,5,0"
                                        HorizontalOptions="FillAndExpand"
                                        Orientation="Horizontal"
                                        VerticalOptions="Center">
                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding SelectVehicleCommand}" />
                                        </StackLayout.GestureRecognizers>
                                        <Entry
                                            FontSize="{StaticResource FontSize12}"
                                            HorizontalOptions="FillAndExpand"
                                            InputTransparent="True"
                                            Placeholder="{i18n:TranslateResource Common_Label_Grid_VehiclePlate}"
                                            Text="{Binding VehicleSelect.PrivateCode}"
                                            VerticalOptions="Center">
                                            <Entry.Effects>
                                                <effects:BorderlessEffect />
                                            </Entry.Effects>
                                        </Entry>
                                        <controls:IconView
                                            Foreground="Black"
                                            HeightRequest="15"
                                            HorizontalOptions="End"
                                            Source="ic_sortdown.png"
                                            VerticalOptions="Center"
                                            WidthRequest="15" />
                                    </StackLayout>
                                </Frame>
                                <sharpnado:MaterialFrame
                                    Padding="0"
                                    BackgroundColor="{StaticResource PrimaryColor}"
                                    CornerRadius="5"
                                    HasShadow="False"
                                    HeightRequest="35"
                                    HorizontalOptions="Start"
                                    VerticalOptions="CenterAndExpand"
                                    WidthRequest="35">
                                    <sharpnado:MaterialFrame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding OpenPopupCommand}" />
                                    </sharpnado:MaterialFrame.GestureRecognizers>
                                    <controls:IconView
                                        Foreground="White"
                                        HeightRequest="20"
                                        HorizontalOptions="Center"
                                        Source="ic_help.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />
                                </sharpnado:MaterialFrame>

                            </StackLayout>
                            <StackLayout
                                Grid.Row="1"
                                Grid.Column="2"
                                Orientation="Horizontal">
                                <!--  button ecxel  -->
                                <sharpnado:MaterialFrame
                                    Padding="0"
                                    CornerRadius="5"
                                    HasShadow="False"
                                    HeightRequest="35"
                                    HorizontalOptions="Start"
                                    IsVisible="{Binding IsExportExcel}"
                                    LightThemeBackgroundColor="{StaticResource PrimaryColor}"
                                    VerticalOptions="CenterAndExpand"
                                    WidthRequest="35">
                                    <sharpnado:MaterialFrame.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding ExportExcellCommand}" />
                                    </sharpnado:MaterialFrame.GestureRecognizers>
                                    <controls:IconView
                                        Foreground="White"
                                        HeightRequest="20"
                                        HorizontalOptions="Center"
                                        Source="ic_excel.png"
                                        VerticalOptions="Center"
                                        WidthRequest="20" />
                                </sharpnado:MaterialFrame>
                            </StackLayout>
                        </Grid>

                        <syncDataGrid:SfDataGrid
                            x:Name="dataGrid"
                            Grid.Row="1"
                            AllowLoadMore="True"
                            AllowResizingColumn="False"
                            AutoGenerateColumns="False"
                            ColumnSizer="Auto"
                            GridStyle="{StaticResource CustomDataGridStyle}"
                            HorizontalOptions="FillAndExpand"
                            IsBusy="{Binding IsBusy}"
                            IsVisible="{Binding HasData}"
                            ItemsSource="{Binding ListDataSearch}"
                            LoadMoreCommand="{Binding LoadMoreDataCommand}"
                            LoadMorePosition="Bottom"
                            LoadMoreText="{i18n:TranslateResource Common_Message_LoadMore}"
                            ScrollingMode="PixelLine"
                            VerticalOptions="FillAndExpand"
                            VerticalOverScrollMode="None">

                            <syncDataGrid:SfDataGrid.Columns>
                                <!--  Số thứ tự  -->
                                <syncDataGrid:GridTemplateColumn
                                    Width="30"
                                    IsHidden="{Binding ShowOrderNumber, Converter={StaticResource ShowHideColumnConverter}}"
                                    MappingName="OrderNumber"
                                    TextAlignment="Center">
                                    <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontAttributes="Bold"
                                                HorizontalOptions="FillAndExpand"
                                                Text="{i18n:TranslateResource FuelsSummariesReport_Table_Serial}"
                                                TextColor="{StaticResource PrimaryColor}"
                                                VerticalOptions="FillAndExpand"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                    <syncDataGrid:GridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackLayout>
                                                <Label
                                                    FontSize="{StaticResource FontSize10}"
                                                    HorizontalOptions="FillAndExpand"
                                                    Text="{Binding OrderNumber}"
                                                    VerticalOptions="FillAndExpand"
                                                    XAlign="Center"
                                                    YAlign="Center" />
                                            </StackLayout>
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.CellTemplate>
                                </syncDataGrid:GridTemplateColumn>

                                <!--  Từ ngày / Đến ngày  -->
                                <syncDataGrid:GridTemplateColumn
                                    Width="130"
                                    ColumnSizer="Auto"
                                    IsHidden="{Binding ShowStartEndTime, Converter={StaticResource ShowHideColumnConverter}}"
                                    MappingName="StartTime"
                                    TextAlignment="Center">
                                    <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontAttributes="Bold"
                                                HorizontalOptions="FillAndExpand"
                                                Text="{i18n:TranslateResource FuelsSummariesReport_Table_StartEndTime2}"
                                                TextColor="{StaticResource PrimaryColor}"
                                                VerticalOptions="FillAndExpand"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                    <syncDataGrid:GridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackLayout Spacing="1">
                                                <StackLayout.GestureRecognizers>
                                                    <TapGestureRecognizer
                                                        Command="{Binding Path=BindingContext.DetailVehicleCommand, Source={x:Reference Name=this}}"
                                                        CommandParameter="{Binding OrderNumber}"
                                                        NumberOfTapsRequired="1" />
                                                </StackLayout.GestureRecognizers>
                                                <Label
                                                    FontSize="{StaticResource FontSize10}"
                                                    HorizontalOptions="FillAndExpand"
                                                    Text="{Binding StartTime, Converter={StaticResource DateTimeConverter}}"
                                                    TextColor="{StaticResource PrimaryColor}"
                                                    VerticalOptions="FillAndExpand"
                                                    XAlign="Center"
                                                    YAlign="End" />
                                                <Label
                                                    FontSize="{StaticResource FontSize10}"
                                                    HorizontalOptions="FillAndExpand"
                                                    Text="{Binding EndTime, Converter={StaticResource DateTimeConverter}}"
                                                    TextColor="{StaticResource PrimaryColor}"
                                                    VerticalOptions="FillAndExpand"
                                                    XAlign="Center"
                                                    YAlign="Start" />
                                            </StackLayout>
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.CellTemplate>
                                </syncDataGrid:GridTemplateColumn>

                                <!--  Số lần đổ  -->
                                <syncDataGrid:GridTemplateColumn
                                    Width="80"
                                    ColumnSizer="Auto"
                                    IsHidden="{Binding ShowNumberOfPour, Converter={StaticResource ShowHideColumnConverter}}"
                                    MappingName="SumPourCount"
                                    TextAlignment="Center">
                                    <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontAttributes="Bold"
                                                HorizontalOptions="FillAndExpand"
                                                Text="{i18n:TranslateResource FuelsSummariesReport_Table_NumberOfPour}"
                                                TextColor="{StaticResource PrimaryColor}"
                                                VerticalOptions="FillAndExpand"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                    <syncDataGrid:GridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontSize="{StaticResource FontSize10}"
                                                HorizontalOptions="FillAndExpand"
                                                Text="{Binding SumPourCount}"
                                                VerticalOptions="FillAndExpand"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.CellTemplate>
                                </syncDataGrid:GridTemplateColumn>

                                <!--  Số lần hút  -->
                                <syncDataGrid:GridTemplateColumn
                                    Width="80"
                                    ColumnSizer="Auto"
                                    IsHidden="{Binding ShowNumberOfSuction, Converter={StaticResource ShowHideColumnConverter}}"
                                    MappingName="SumSuckCount"
                                    TextAlignment="Center">
                                    <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontAttributes="Bold"
                                                HorizontalOptions="FillAndExpand"
                                                Text="{i18n:TranslateResource FuelsSummariesReport_Table_NumberOfSuction}"
                                                TextColor="{StaticResource PrimaryColor}"
                                                VerticalOptions="FillAndExpand"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                    <syncDataGrid:GridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontSize="{StaticResource FontSize10}"
                                                HorizontalOptions="FillAndExpand"
                                                Text="{Binding SumSuckCount}"
                                                VerticalOptions="FillAndExpand"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.CellTemplate>
                                </syncDataGrid:GridTemplateColumn>

                                <!--  Số lít đầu ngày  -->
                                <syncDataGrid:GridTemplateColumn
                                    Width="80"
                                    ColumnSizer="Auto"
                                    IsHidden="{Binding ShowFirtLits, Converter={StaticResource ShowHideColumnConverter}}"
                                    MappingName="SumFirstLits"
                                    TextAlignment="Center">
                                    <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontAttributes="Bold"
                                                HorizontalOptions="FillAndExpand"
                                                Text="{i18n:TranslateResource FuelsSummariesReport_Table_FirtLits}"
                                                TextColor="{StaticResource PrimaryColor}"
                                                VerticalOptions="FillAndExpand"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                    <syncDataGrid:GridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontSize="{StaticResource FontSize10}"
                                                HorizontalOptions="FillAndExpand"
                                                Text="{Binding SumFirstLits, StringFormat='{0:0.##}'}"
                                                VerticalOptions="FillAndExpand"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.CellTemplate>
                                </syncDataGrid:GridTemplateColumn>

                                <!--  Số lít đổ  -->
                                <syncDataGrid:GridTemplateColumn
                                    Width="80"
                                    ColumnSizer="Auto"
                                    IsHidden="{Binding ShowLitersOfPour, Converter={StaticResource ShowHideColumnConverter}}"
                                    MappingName="SumPourTotal"
                                    TextAlignment="Center">
                                    <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontAttributes="Bold"
                                                HorizontalOptions="FillAndExpand"
                                                Text="{i18n:TranslateResource FuelsSummariesReport_Table_LitersOfPour}"
                                                TextColor="{StaticResource PrimaryColor}"
                                                VerticalOptions="FillAndExpand"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                    <syncDataGrid:GridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontSize="{StaticResource FontSize10}"
                                                HorizontalOptions="FillAndExpand"
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding SumPourTotal, StringFormat='{0:0.##}'}"
                                                VerticalOptions="FillAndExpand"
                                                VerticalTextAlignment="Center"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.CellTemplate>
                                </syncDataGrid:GridTemplateColumn>

                                <!--  Số lít hút  -->
                                <syncDataGrid:GridTemplateColumn
                                    Width="80"
                                    ColumnSizer="Auto"
                                    IsHidden="{Binding ShowLitersOfSuction, Converter={StaticResource ShowHideColumnConverter}}"
                                    MappingName="SumSuckTotal"
                                    TextAlignment="Center">
                                    <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontAttributes="Bold"
                                                HorizontalOptions="FillAndExpand"
                                                Text="{i18n:TranslateResource FuelsSummariesReport_Table_LitersOfSuction}"
                                                TextColor="{StaticResource PrimaryColor}"
                                                VerticalOptions="FillAndExpand"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                    <syncDataGrid:GridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontSize="{StaticResource FontSize10}"
                                                HorizontalOptions="FillAndExpand"
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding SumSuckTotal, StringFormat='{0:0.##}'}"
                                                VerticalOptions="FillAndExpand"
                                                VerticalTextAlignment="Center"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.CellTemplate>
                                </syncDataGrid:GridTemplateColumn>

                                <!--  Số lít tồn  -->
                                <syncDataGrid:GridTemplateColumn
                                    Width="80"
                                    ColumnSizer="Auto"
                                    IsHidden="{Binding ShowLastLits, Converter={StaticResource ShowHideColumnConverter}}"
                                    MappingName="LastLits"
                                    TextAlignment="Center">
                                    <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontAttributes="Bold"
                                                HorizontalOptions="FillAndExpand"
                                                Text="{i18n:TranslateResource FuelsSummariesReport_Table_LastLits}"
                                                TextColor="{StaticResource PrimaryColor}"
                                                VerticalOptions="FillAndExpand"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                    <syncDataGrid:GridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontSize="{StaticResource FontSize10}"
                                                HorizontalOptions="FillAndExpand"
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding SumLastLits, StringFormat='{0:0.##}'}"
                                                VerticalOptions="FillAndExpand"
                                                VerticalTextAlignment="Center"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.CellTemplate>
                                </syncDataGrid:GridTemplateColumn>

                                <!--  Số lít tiêu hao  -->
                                <syncDataGrid:GridTemplateColumn
                                    Width="80"
                                    ColumnSizer="Auto"
                                    IsHidden="{Binding ShowLitsConsumable, Converter={StaticResource ShowHideColumnConverter}}"
                                    MappingName="SumLiterConsumable"
                                    TextAlignment="Center">
                                    <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontAttributes="Bold"
                                                HorizontalOptions="FillAndExpand"
                                                Text="{i18n:TranslateResource FuelsSummariesReport_Table_LitsConsumable}"
                                                TextColor="{StaticResource PrimaryColor}"
                                                VerticalOptions="FillAndExpand"
                                                XAlign="Center"
