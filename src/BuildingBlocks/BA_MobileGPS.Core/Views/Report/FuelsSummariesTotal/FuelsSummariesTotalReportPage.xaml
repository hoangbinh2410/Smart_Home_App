                                    TextAlignment="Center">
                                    <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontAttributes="Bold"
                                                HorizontalOptions="FillAndExpand"
                                                Text="{i18n:TranslateResource FuelsSummariesReport_Table_TotalKmGps}"
                                                TextColor="{StaticResource PrimaryColor}"
                                                VerticalOptions="FillAndExpand"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                    <syncDataGrid:GridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontSize="{StaticResource FontSize10}"
                                                HorizontalOptions="FillAndExpand"
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding SumTotalKmGps, StringFormat='{0:0.##}'}"
                                                VerticalOptions="FillAndExpand"
                                                VerticalTextAlignment="Center"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.CellTemplate>
                                </syncDataGrid:GridTemplateColumn>

                                <!--  Thời gian nổ máy (phút)  -->
                                <syncDataGrid:GridTemplateColumn
                                    Width="100"
                                    ColumnSizer="Auto"
                                    IsHidden="{Binding ShowMinutesOfManchineOn, Converter={StaticResource ShowHideColumnConverter}}"
                                    MappingName="SumMinuteOfMachineOn"
                                    TextAlignment="Center">
                                    <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontAttributes="Bold"
                                                HorizontalOptions="FillAndExpand"
                                                Text="{i18n:TranslateResource FuelsSummariesReport_Table_MinutesOfManchineOn}"
                                                TextColor="{StaticResource PrimaryColor}"
                                                VerticalOptions="FillAndExpand"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                    <syncDataGrid:GridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontSize="{StaticResource FontSize10}"
                                                HorizontalOptions="FillAndExpand"
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding SumMinuteOfMachineOn}"
                                                VerticalOptions="FillAndExpand"
                                                VerticalTextAlignment="Center"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.CellTemplate>
                                </syncDataGrid:GridTemplateColumn>

                                <!--  Thời gian dừng đỗ nổ máy (phút)  -->
                                <syncDataGrid:GridTemplateColumn
                                    Width="120"
                                    ColumnSizer="Auto"
                                    IsHidden="{Binding ShowMinuteOfMachineOnStop, Converter={StaticResource ShowHideColumnConverter}}"
                                    MappingName="SumMinuteOfMachineOnStop"
                                    TextAlignment="Center">
                                    <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontAttributes="Bold"
                                                HorizontalOptions="FillAndExpand"
                                                Text="{i18n:TranslateResource FuelsSummariesReport_Table_MinuteOfMachineOnStop}"
                                                TextColor="{StaticResource PrimaryColor}"
                                                VerticalOptions="FillAndExpand"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                    <syncDataGrid:GridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontSize="{StaticResource FontSize10}"
                                                HorizontalOptions="FillAndExpand"
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding SumMinuteOfMachineOnStop}"
                                                VerticalOptions="FillAndExpand"
                                                VerticalTextAlignment="Center"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.CellTemplate>
                                </syncDataGrid:GridTemplateColumn>

                                <!--  Định mức quy định  -->
                                <syncDataGrid:GridTemplateColumn
                                    Width="100"
                                    ColumnSizer="Auto"
                                    IsHidden="{Binding ShowQuotaRegulations, Converter={StaticResource ShowHideColumnConverter}}"
                                    MappingName="SumNormsOfGasonline"
                                    TextAlignment="Center">
                                    <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontAttributes="Bold"
                                                HorizontalOptions="FillAndExpand"
                                                Text="{i18n:TranslateResource FuelsSummariesReport_Table_QuotaRegulations}"
                                                TextColor="{StaticResource PrimaryColor}"
                                                VerticalOptions="FillAndExpand"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                    <syncDataGrid:GridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontSize="{StaticResource FontSize10}"
                                                HorizontalOptions="FillAndExpand"
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding SumNormsOfGasonline, StringFormat='{0:0.##}'}"
                                                VerticalOptions="FillAndExpand"
                                                VerticalTextAlignment="Center"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.CellTemplate>
                                </syncDataGrid:GridTemplateColumn>

                                <!--  Định mức thực tế  -->
                                <syncDataGrid:GridTemplateColumn
                                    Width="100"
                                    ColumnSizer="Auto"
                                    IsHidden="{Binding ShowQuotaReality, Converter={StaticResource ShowHideColumnConverter}}"
                                    MappingName="SumRealNormsOfGasonline"
                                    TextAlignment="Center">
                                    <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontAttributes="Bold"
                                                HorizontalOptions="FillAndExpand"
                                                Text="{i18n:TranslateResource FuelsSummariesReport_Table_QuotaReality}"
                                                TextColor="{StaticResource PrimaryColor}"
                                                VerticalOptions="FillAndExpand"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                    <syncDataGrid:GridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontSize="{StaticResource FontSize10}"
                                                HorizontalOptions="FillAndExpand"
                                                HorizontalTextAlignment="Center"
                                                Text="{Binding SumRealNormsOfGasonline, StringFormat='{0:0.##}'}"
                                                VerticalOptions="FillAndExpand"
                                                VerticalTextAlignment="Center"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.CellTemplate>
                                </syncDataGrid:GridTemplateColumn>

                                <!--  Chi tiết  -->
                                <syncDataGrid:GridTemplateColumn
                                    Width="80"
                                    ColumnSizer="Auto"
                                    MappingName="Detail"
                                    TextAlignment="Center">
                                    <syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Label
                                                FontAttributes="Bold"
                                                HorizontalOptions="FillAndExpand"
                                                Text="Chi tiết"
                                                TextColor="{StaticResource PrimaryColor}"
                                                VerticalOptions="FillAndExpand"
                                                XAlign="Center"
                                                YAlign="Center" />
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.HeaderTemplate>
                                    <syncDataGrid:GridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackLayout Spacing="1">
                                                <StackLayout.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Path=BindingContext.DetailRedirectVehicleCommand, Source={x:Reference Name=this}}" NumberOfTapsRequired="1" />
                                                </StackLayout.GestureRecognizers>
                                                <Label
                                                    FontSize="{StaticResource FontSize12}"
                                                    HorizontalOptions="CenterAndExpand"
                                                    Text="Chi tiết"
                                                    TextColor="{StaticResource PrimaryColor}"
                                                    VerticalOptions="CenterAndExpand" />
                                            </StackLayout>
                                        </DataTemplate>
                                    </syncDataGrid:GridTemplateColumn.CellTemplate>
                                </syncDataGrid:GridTemplateColumn>

                            </syncDataGrid:SfDataGrid.Columns>

                        </syncDataGrid:SfDataGrid>
                        <StackLayout
                            Grid.Row="1"
                            BackgroundColor="White"
                            HorizontalOptions="Center"
                            IsVisible="{Binding HasData, Converter={StaticResource InvertBooleanConverter}}"
                            Spacing="10"
                            VerticalOptions="Center">
                            <controls:SVGImage
                                Margin="{x:OnIdiom Phone='0,0,0,0',
                                                   Desktop='0',
                                                   Tablet='0'}"
                                HeightRequest="200"
                                Source="NoItem.svg"
                                VerticalOptions="Center"
                                WidthRequest="200" />
                            <Label
                                HorizontalOptions="Center"
                                HorizontalTextAlignment="Center"
                                Text="{i18n:TranslateResource Common_Message_NoData}"
                                TextColor="{StaticResource TextPrimaryColor}" />
                        </StackLayout>
                    </Grid>
                    <Grid
                        x:Name="showhideColumn"
                        AbsoluteLayout.LayoutBounds="0,1,1,1"
                        AbsoluteLayout.LayoutFlags="All"
                        RowSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackLayout
                            Grid.Row="0"
                            BackgroundColor="Gray"
                            HorizontalOptions="Fill"
                            Opacity="0.2"
                            VerticalOptions="Fill">
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                        <Frame
                            Grid.Row="1"
                            Padding="10"
                            BackgroundColor="White"
                            CornerRadius="0"
                            HasShadow="False"
                            HorizontalOptions="FillAndExpand">
                            <Grid HorizontalOptions="FillAndExpand" RowSpacing="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width=".5*" />
                                    <ColumnDefinition Width=".5*" />
                                </Grid.ColumnDefinitions>
                                <!--  STT  -->
                                <checkbox:SfCheckBox
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    CheckedColor="{StaticResource PrimaryColor}"
                                    CornerRadius="5"
                                    FontSize="13"
                                    IsChecked="{Binding ShowOrderNumber}"
                                    Text="{i18n:TranslateResource FuelsSummariesReport_CheckBox_Serial}" />

                                <!--  Bắt đầu / Kết thúc  -->
                                <checkbox:SfCheckBox
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    CheckedColor="{StaticResource PrimaryColor}"
                                    CornerRadius="5"
                                    FontSize="13"
                                    IsChecked="{Binding ShowStartEndTime}"
                                    Text="{i18n:TranslateResource FuelsSummariesReport_CheckBox_StartEndTime}" />

                                <!--  Số lần đổ  -->
                                <checkbox:SfCheckBox
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    CheckedColor="{StaticResource PrimaryColor}"
                                    CornerRadius="5"
                                    FontSize="13"
                                    IsChecked="{Binding ShowNumberOfPour}"
                                    Text="{i18n:TranslateResource FuelsSummariesReport_CheckBox_NumberOfPour}" />

                                <!--  Số lần hút  -->
                                <checkbox:SfCheckBox
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    CheckedColor="{StaticResource PrimaryColor}"
                                    CornerRadius="5.0"
                                    FontSize="13"
                                    IsChecked="{Binding ShowNumberOfSuction}"
                                    Text="{i18n:TranslateResource FuelsSummariesReport_CheckBox_NumberOfSuction}" />

                                <!--  Số lít đầu ngày  -->
                                <checkbox:SfCheckBox
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    CheckedColor="{StaticResource PrimaryColor}"
                                    CornerRadius="5"
                                    FontSize="13"
                                    IsChecked="{Binding ShowFirtLits}"
                                    Text="{i18n:TranslateResource FuelsSummariesReport_CheckBox_FirtLits}" />

                                <!--  Số lít đổ  -->
                                <checkbox:SfCheckBox
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    CheckedColor="{StaticResource PrimaryColor}"
                                    CornerRadius="5.0"
                                    FontSize="13"
                                    IsChecked="{Binding ShowLitersOfPour}"
                                    Text="{i18n:TranslateResource FuelsSummariesReport_CheckBox_LitersOfPour}" />

                                <!--  Số lít tồn  -->
                                <checkbox:SfCheckBox
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    CheckedColor="{StaticResource PrimaryColor}"
                                    CornerRadius="5"
                                    FontSize="13"
                                    IsChecked="{Binding ShowLastLits}"
                                    Text="{i18n:TranslateResource FuelsSummariesReport_CheckBox_LastLits}" />

                                <!--  Số lít hút  -->
                                <checkbox:SfCheckBox
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    CheckedColor="{StaticResource PrimaryColor}"
                                    CornerRadius="5.0"
                                    FontSize="13"
                                    IsChecked="{Binding ShowLitersOfSuction}"
                                    Text="{i18n:TranslateResource FuelsSummariesReport_CheckBox_LitersOfSuction}" />

                                <!--  Số lít tiêu hao  -->
                                <checkbox:SfCheckBox
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    CheckedColor="{StaticResource PrimaryColor}"
                                    CornerRadius="5"
                                    FontSize="13"
                                    IsChecked="{Binding ShowLitsConsumable}"
                                    Text="{i18n:TranslateResource FuelsSummariesReport_CheckBox_LitsConsumable}" />

                                <!--  Km Gps  -->
                                <checkbox:SfCheckBox
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    CheckedColor="{StaticResource PrimaryColor}"
                                    CornerRadius="5.0"
                                    FontSize="13"
                                    IsChecked="{Binding ShowTotalKmGps}"
                                    Text="{i18n:TranslateResource FuelsSummariesReport_CheckBox_TotalKmGps}" />

                                <!--  Thời gian nổ máy (phút)  -->
                                <checkbox:SfCheckBox
                                    Grid.Row="5"
                                    Grid.Column="0"
                                    CheckedColor="{StaticResource PrimaryColor}"
                                    CornerRadius="5"
                                    FontSize="13"
                                    IsChecked="{Binding ShowMinutesOfManchineOn}"
                                    Text="{i18n:TranslateResource FuelsSummariesReport_CheckBox_MinutesOfManchineOn}" />

                                <!--  Thời gian dừng đỗ nổ máy (phút)  -->
                                <checkbox:SfCheckBox
                                    Grid.Row="5"
                                    Grid.Column="1"
                                    CheckedColor="{StaticResource PrimaryColor}"
                                    CornerRadius="5"
                                    FontSize="13"
                                    IsChecked="{Binding ShowMinuteOfMachineOnStop}"
                                    Text="{i18n:TranslateResource FuelsSummariesReport_CheckBox_MinuteOfMachineOnStop}" />

                                <!--  Định mức quy định  -->
                                <checkbox:SfCheckBox
                                    Grid.Row="6"
                                    Grid.Column="0"
                                    CheckedColor="{StaticResource PrimaryColor}"
                                    CornerRadius="5.0"
                                    FontSize="13"
                                    IsChecked="{Binding ShowQuotaRegulations}"
                                    Text="{i18n:TranslateResource FuelsSummariesReport_CheckBox_QuotaRegulations}" />

                                <!--  Định mức thực tế  -->
                                <checkbox:SfCheckBox
                                    Grid.Row="6"
                                    Grid.Column="1"
                                    CheckedColor="{StaticResource PrimaryColor}"
                                    CornerRadius="5"
                                    FontSize="13"
                                    IsChecked="{Binding ShowQuotaReality}"
                                    Text="{i18n:TranslateResource FuelsSummariesReport_CheckBox_QuotaReality}" />

                                <!--  button save  -->

                                <StackLayout
                                    Grid.Row="7"
                                    Grid.ColumnSpan="2"
                                    HorizontalOptions="FillAndExpand"
                                    Orientation="Horizontal">
                                    <Button
                                        BackgroundColor="White"
                                        BorderColor="{StaticResource PrimaryColor}"
                                        BorderRadius="0"
                                        BorderWidth="1"
                                        Clicked="HideableToolbarItem_Clicked"
                                        FontAttributes="Bold"
                                        FontSize="12"
                                        HeightRequest="40"
                                        HorizontalOptions="FillAndExpand"
                                        Text="{i18n:TranslateResource Common_Button_Close,
                                                                      Converter={StaticResource UpperCaseConverter}}"
                                        TextColor="{StaticResource PrimaryColor}" />

                                    <Button
                                        BackgroundColor="{StaticResource PrimaryColor}"
                                        BorderRadius="0"
                                        Clicked="Button_Clicked"
                                        Command="{Binding SaveComlumnHideCommand}"
                                        FontAttributes="Bold"
                                        FontSize="12"
                                        HeightRequest="40"
                                        HorizontalOptions="FillAndExpand"
                                        Text="{i18n:TranslateResource Common_Button_SaveShowHideColumn,
                                                                      Converter={StaticResource UpperCaseConverter}}"
                                        TextColor="{StaticResource WhiteColor}" />
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </Grid>
                </AbsoluteLayout>
            </sfPopup:SfPopupLayout.Content>
        </sfPopup:SfPopupLayout>
    </ContentPage.Content>
</ContentPage>