<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BA_MobileGPS.Core.Views.NumberPhoneLoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:BA_MobileGPS.Core.Controls"
    xmlns:effects="clr-namespace:BA_MobileGPS.Core.Effects"
    xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:ffImage="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:fontawesome="clr-namespace:FontAwesome;assembly=BA_MobileGPS.Utilities"
    xmlns:input="clr-namespace:Syncfusion.XForms.TextInputLayout;assembly=Syncfusion.Core.XForms"
    xmlns:prism="http://prismlibrary.com"
    xmlns:sh="clr-namespace:Sharpnado.Shades;assembly=Sharpnado.Shadows"
    xmlns:sharpnado="clr-namespace:Sharpnado.MaterialFrame;assembly=Sharpnado.MaterialFrame"
    prism:ViewModelLocator.AutowireViewModel="True">
    <NavigationPage.TitleView>
        <Grid
            ColumnSpacing="10"
            HeightRequest="44"
            HorizontalOptions="FillAndExpand">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="35" />
            </Grid.ColumnDefinitions>
            <ffImage:CachedImage
                Grid.Column="0"
                Margin="0,0,5,0"
                HeightRequest="27"
                HorizontalOptions="Start"
                Source="ic_close.png"
                VerticalOptions="Center">
                <ffImage:CachedImage.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ClosePageCommand}" />
                </ffImage:CachedImage.GestureRecognizers>
            </ffImage:CachedImage>
        </Grid>
    </NavigationPage.TitleView>
    <ScrollView>
        <Grid>
            <Grid RowSpacing="0">
                <ff:CachedImage Aspect="AspectFill" Source="bg_Login.png" />
                <Grid RowDefinitions="*,2.5*" RowSpacing="0">
                    <ff:CachedImage
                        Grid.Row="0"
                        HeightRequest="90"
                        HorizontalOptions="Center"
                        Source="logo_Login.png"
                        VerticalOptions="EndAndExpand"
                        WidthRequest="180" />
                    <StackLayout Grid.Row="1" Spacing="40">
                        <Grid
                            RowDefinitions="Auto,*"
                            RowSpacing="20"
                            VerticalOptions="CenterAndExpand">
                            <StackLayout Grid.Row="0" Spacing="40">
                                <!--  Text hướng dẫn  -->
                                <Label
                                    Padding="50,0,50,0"
                                    FontSize="14"
                                    Text="Để tăng cường bảo mật, quý khách vui lòng nhập số điện thoại của mình để xác nhận. Tin nhắn mã OTP sẽ được gửi về số điện thoại của quý khách."
                                    TextColor="{DynamicResource WhiteColor}" />
                                <!--  Entry  -->
                                <!--  Nhập số điện thoại  -->
                                <input:SfTextInputLayout
                                    ContainerType="Outlined"
                                    ErrorText="{Binding NumberPhone.ErrorFirst}"
                                    FocusedColor="Transparent"
                                    FocusedStrokeWidth="0"
                                    HasError="{Binding NumberPhone.IsNotValid}"
                                    StyleClass="LoginEntry"
                                    UnfocusedColor="Transparent"
                                    UnfocusedStrokeWidth="0">
                                    <input:SfTextInputLayout.LeadingView>
                                        <sh:Shadows
                                            CornerRadius="21"
                                            HeightRequest="42"
                                            Scale="{OnPlatform Android=1.02,
                                                               iOS=1.01}"
                                            WidthRequest="42">
                                            <sh:Shadows.Shades>
                                                <sh:ImmutableShades>
                                                    <sh:Shade
                                                        BlurRadius="4"
                                                        Opacity="0.3"
                                                        Offset="-2,0"
                                                        Color="{DynamicResource WhiteColor}" />
                                                </sh:ImmutableShades>
                                            </sh:Shadows.Shades>
                                            <sharpnado:MaterialFrame
                                                Padding="0"
                                                CornerRadius="21"
                                                HeightRequest="42"
                                                LightThemeBackgroundColor="{DynamicResource PrimaryColor}"
                                                TranslationX="{OnPlatform Android=-1.2,
                                                                          iOS=-2.2}"
                                                TranslationY="0.5"
                                                WidthRequest="42">
                                                <controls:FontAwesomeIcon
                                                    Margin="9"
                                                    FontAttributes="Bold"
                                                    HorizontalOptions="Center"
                                                    Text="{x:Static fontawesome:FontAwesomeIcons.PhoneAlt}"
                                                    TextColor="{DynamicResource WhiteColor}"
                                                    VerticalOptions="CenterAndExpand" />
                                            </sharpnado:MaterialFrame>

                                        </sh:Shadows>
                                    </input:SfTextInputLayout.LeadingView>
                                    <input:SfTextInputLayout.InputView>
                                        <Entry
                                            HeightRequest="{OnPlatform Android=40,
                                                                       iOS=30}"
                                            Keyboard="Telephone"
                                            MaxLength="10"
                                            Placeholder="Số điện thoại"
                                            Text="{Binding NumberPhone.Value}">
                                            <Entry.Effects>
                                                <effects:ClearEntryEffect />
                                            </Entry.Effects>
                                        </Entry>
                                    </input:SfTextInputLayout.InputView>
                                </input:SfTextInputLayout>
                            </StackLayout>

                            <StackLayout Grid.Row="1">
                                <!--  Button 1  -->
                                <sh:Shadows CornerRadius="20">
                                    <sh:Shadows.Shades>
                                        <sh:ImmutableShades>
                                            <sh:Shade
                                                BlurRadius="4"
                                                Opacity="0.4"
                                                Offset="0,0"
                                                Color="{DynamicResource WhiteColor}" />
                                        </sh:ImmutableShades>
                                    </sh:Shadows.Shades>
                                    <Button
                                        Padding="0"
                                        BackgroundColor="{DynamicResource PrimaryColor}"
                                        Command="{Binding PushOTPSMSPageCommand}"
                                        CornerRadius="20"
                                        HeightRequest="38"
                                        HorizontalOptions="Center"
                                        Text="GỬI MÃ XÁC THỰC"
                                        TextColor="{DynamicResource WhiteColor}"
                                        WidthRequest="300" />
                                </sh:Shadows>
                            </StackLayout>
                        </Grid>
                    </StackLayout>
                </Grid>
            </Grid>
            <!--  IsOTPZalo  -->
            <Grid IsVisible="{Binding IsOTPZalo}" RowSpacing="0">
                <ff:CachedImage Aspect="AspectFill" Source="bg_Login.png" />
                <Grid RowDefinitions="*,2.7*" RowSpacing="0">
                    <ff:CachedImage
                        Grid.Row="0"
                        HeightRequest="90"
                        HorizontalOptions="Center"
                        Source="logo_Login.png"
                        VerticalOptions="EndAndExpand"
                        WidthRequest="180" />
                    <StackLayout Grid.Row="1" Spacing="20">
                        <Grid
                            RowDefinitions="Auto,Auto,*"
                            RowSpacing="20"
                            VerticalOptions="CenterAndExpand">
                            <StackLayout Grid.Row="0" Spacing="20">
                                <!--  Text hướng dẫn  -->
                                <Label
                                    Padding="50,0,50,0"
                                    FontSize="14"
                                    Text="Vui lòng nhập số điện thoại đã đăng ký tài khoản và nhấn like kênh Zalo Bình Anh để nhận mã OTP"
                                    TextColor="{DynamicResource WhiteColor}" />
                                <!--  Entry  -->
                                <!--  Nhập số điện thoại  -->
                                <input:SfTextInputLayout
                                    ContainerType="Outlined"
                                    ErrorText="{Binding NumberPhone.ErrorFirst}"
                                    FocusedColor="Transparent"
                                    FocusedStrokeWidth="0"
                                    HasError="{Binding NumberPhone.IsNotValid}"
                                    StyleClass="LoginEntry"
                                    UnfocusedColor="Transparent"
                                    UnfocusedStrokeWidth="0">
                                    <input:SfTextInputLayout.LeadingView>
                                        <sh:Shadows
                                            CornerRadius="21"
                                            HeightRequest="42"
                                            Scale="{OnPlatform Android=1.02,
                                                               iOS=1.01}"
                                            WidthRequest="42">
                                            <sh:Shadows.Shades>
                                                <sh:ImmutableShades>
                                                    <sh:Shade
                                                        BlurRadius="4"
                                                        Opacity="0.3"
                                                        Offset="-2,0"
                                                        Color="{DynamicResource WhiteColor}" />
                                                </sh:ImmutableShades>
                                            </sh:Shadows.Shades>
                                            <sharpnado:MaterialFrame
                                                Padding="0"
                                                CornerRadius="21"
                                                HeightRequest="42"
                                                LightThemeBackgroundColor="{DynamicResource PrimaryColor}"
                                                TranslationX="{OnPlatform Android=-1.2,
                                                                          iOS=-2.2}"
                                                TranslationY="0.5"
                                                WidthRequest="42">
                                                <controls:FontAwesomeIcon
                                                    Margin="9"
                                                    FontAttributes="Bold"
                                                    HorizontalOptions="Center"
                                                    Text="{x:Static fontawesome:FontAwesomeIcons.PhoneAlt}"
                                                    TextColor="{DynamicResource WhiteColor}"
                                                    VerticalOptions="CenterAndExpand" />
                                            </sharpnado:MaterialFrame>

                                        </sh:Shadows>
                                    </input:SfTextInputLayout.LeadingView>
                                    <input:SfTextInputLayout.InputView>
                                        <Entry
                                            HeightRequest="{OnPlatform Android=40,
                                                                       iOS=30}"
                                            Keyboard="Telephone"
                                            MaxLength="10"
                                            Placeholder="Số điện thoại"
                                            Text="{Binding NumberPhone.Value}">
                                            <Entry.Effects>
                                                <effects:ClearEntryEffect />
                                            </Entry.Effects>
                                        </Entry>
                                    </input:SfTextInputLayout.InputView>
                                </input:SfTextInputLayout>
                            </StackLayout>

                            <!--  Mã QR  -->
                            <StackLayout Grid.Row="1" Spacing="5">
                                <ff:CachedImage
                                    BitmapOptimizations="True"
                                    HeightRequest="150"
                                    Source="ic_bounded_area.png"
                                    VerticalOptions="Center"
                                    WidthRequest="150" />
                                <Label
                                    HorizontalOptions="Center"
                                    Text="Quét mã QR Zalo Bình Anh"
                                    TextColor="{DynamicResource WhiteColor}" />
                                <Label
                                    HorizontalOptions="Center"
                                    Text="hoặc"
                                    TextColor="{DynamicResource WhiteColor}" />
                            </StackLayout>
                            <StackLayout Grid.Row="2" Spacing="20">
                                <!--  Button 1  -->
                                <sh:Shadows CornerRadius="20">
                                    <sh:Shadows.Shades>
                                        <sh:ImmutableShades>
                                            <sh:Shade
                                                BlurRadius="4"
                                                Opacity="0.4"
                                                Offset="0,0"
                                                Color="{DynamicResource WhiteColor}" />
                                        </sh:ImmutableShades>
                                    </sh:Shadows.Shades>
                                    <Button
                                        Padding="0"
                                        BackgroundColor="{DynamicResource PrimaryColor}"
                                        Command="{Binding PushZaloPageCommand}"
                                        CornerRadius="20"
                                        HeightRequest="38"
                                        HorizontalOptions="Center"
                                        Text="ĐẾN ZALO BÌNH ANH"
                                        TextColor="{DynamicResource WhiteColor}"
                                        WidthRequest="300" />
                                </sh:Shadows>
                                <!--  Button 2  -->
                                <sh:Shadows CornerRadius="20">
                                    <sh:Shadows.Shades>
                                        <sh:ImmutableShades>
                                            <sh:Shade
                                                BlurRadius="4"
                                                Opacity="0.4"
                                                Offset="0,0"
                                                Color="{DynamicResource WhiteColor}" />
                                        </sh:ImmutableShades>
                                    </sh:Shadows.Shades>
                                    <Button
                                        Padding="0"
                                        BackgroundColor="{DynamicResource PrimaryColor}"
                                        Command="{Binding PushOTPPageCommand}"
                                        CornerRadius="20"
                                        HeightRequest="38"
                                        HorizontalOptions="Center"
                                        Text="XÁC NHẬN"
                                        TextColor="{DynamicResource WhiteColor}"
                                        WidthRequest="300" />
                                </sh:Shadows>
                            </StackLayout>
                        </Grid>
                    </StackLayout>
                </Grid>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>