<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    x:Class="BA_MobileGPS.Core.Styles.DarkTheme"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Color Concept  -->
    <Color x:Key="PrimaryColor">#00ADEF</Color>
    <Color x:Key="PrimaryLightColor">#89DFFF</Color>
    <Color x:Key="PrimaryDarkColor">#00709A</Color>

    <Color x:Key="PurpleColor">#4A7AFF</Color>

    <Color x:Key="HyperLink">#567cd7</Color>
    <Color x:Key="FacebookBlue">#4267B2</Color>
    <Color x:Key="GoogleOrange">#da4453</Color>

    <Color x:Key="BackgoundPageColor">#F3F3F3</Color>
    <Color x:Key="BackgoundPageGradientStartColor">#F3F3F3</Color>
    <Color x:Key="BackgoundPageGradientEndColor">Black</Color>

    <Color x:Key="PrimaryTextColor">#484848</Color>
    <Color x:Key="SecondaryTextColor">#787878</Color>
    <Color x:Key="PlaceHoderTextColor">#C9C9C9</Color>
    <Color x:Key="BarTextColor">White</Color>
    <Color x:Key="GroupTitleTextColor">#00ADEF</Color>

    <Color x:Key="DangerousColor">Red</Color>

    <Color x:Key="CircleFrameBackgroundColor">White</Color>

    <Color x:Key="SearchBarBackgroundColor">White</Color>

    <Color x:Key="SfTextInputErrColor">Red</Color>
    <Color x:Key="SfTextInputFocusColor">Blue</Color>

    <Color x:Key="TabItemSelectedColor">#00ADEF</Color>
    <Color x:Key="TabItemUnSelectedColor">#787878</Color>


    <!--  30x30  -->
    <x:Double x:Key="TabItemNormalSize">30</x:Double>
    <!--  40x40  -->
    <x:Double x:Key="TabItemClickedSize">40</x:Double>
    <FileImageSource x:Key="HomePageTopImageSource" File="dark_top_bg.jpg" />
    <FileImageSource x:Key="HomePageBotImageSource" File="dark_bot_bg.jpg" />

    <Color x:Key="BackgoundFavouriteColor">White</Color>
    <Color x:Key="BackgoundFavouriteGradientStartColor">White</Color>
    <Color x:Key="BackgoundFavouriteGradientEndColor">Black</Color>

</ResourceDictionary>