<?xml version="1.0" encoding="UTF-8" ?>
<sharpnado:MaterialFrame
    x:Class="VMS_MobileGPS.Views.OnlineCarInfoView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cluster="clr-namespace:BA_MobileGPS.Core;assembly=BA_MobileGPS.Core"
    xmlns:controls="clr-namespace:BA_MobileGPS.Core.Controls;assembly=BA_MobileGPS.Core"
    xmlns:i18n="clr-namespace:BA_MobileGPS.Core.Helpers;assembly=BA_MobileGPS.Core"
    xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:sharpnado="clr-namespace:Sharpnado.MaterialFrame;assembly=Sharpnado.MaterialFrame"
    Padding="5"
    HasShadow="False">
    <sharpnado:MaterialFrame.Resources>
        <cluster:NMConverter x:Key="NMConverter" />
    </sharpnado:MaterialFrame.Resources>
    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Padding="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <controls:IconView
                Grid.Row="0"
                Grid.Column="0"
                Foreground="{StaticResource PrimaryColor}"
                HeightRequest="20"
                HorizontalOptions="Center"
                Source="ic_ship2.png"
                VerticalOptions="Center"
                WidthRequest="20" />
            <StackLayout
                Grid.Row="0"
                Grid.Column="1"
                Orientation="Horizontal"
                VerticalOptions="Center">
                <Label
                    FontAttributes="Bold"
                    FontSize="16"
                    Text="{Binding CarActive.PrivateCode}" />
                <Label
                    FontAttributes="Bold"
                    Text="{i18n:TranslateResource Online_Label_AtTime}"
                    VerticalOptions="End" />
            </StackLayout>
            <pancake:PancakeView
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,0,40,0"
                Padding="0"
                BackgroundColor="{StaticResource PrimaryColor}"
                CornerRadius="22"
                HorizontalOptions="End"
                IsVisible="{Binding Circles, Converter={StaticResource HasDataConverter}}"
                WidthRequest="30">
                <pancake:PancakeView.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding HideBorderCommand}" />
                </pancake:PancakeView.GestureRecognizers>
                <controls:IconView
                    Margin="5"
                    Foreground="{StaticResource WhiteColor}"
                    HeightRequest="20"
                    HorizontalOptions="End"
                    Source="ic_radius.png"
                    VerticalOptions="Center"
                    WidthRequest="20" />
            </pancake:PancakeView>
            <pancake:PancakeView
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,0,40,0"
                Padding="0"
                BackgroundColor="{StaticResource PrimaryColor}"
                CornerRadius="22"
                HorizontalOptions="End"
                IsVisible="{Binding Circles, Converter={StaticResource IsEmptyDataConverter}}"
                WidthRequest="30">
                <pancake:PancakeView.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ShowBorderCommand}" />
                </pancake:PancakeView.GestureRecognizers>
                <controls:IconView
                    Margin="5"
                    Foreground="{StaticResource WhiteColor}"
                    HeightRequest="20"
                    HorizontalOptions="End"
                    Source="ic_radius.png"
                    VerticalOptions="Center"
                    WidthRequest="20" />
            </pancake:PancakeView>

            <pancake:PancakeView
                Grid.Row="0"
                Grid.Column="1"
                Padding="0"
                BackgroundColor="{StaticResource PrimaryColor}"
                CornerRadius="22"
                HorizontalOptions="End"
                WidthRequest="30">
                <pancake:PancakeView.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoDistancePageCommand}" />
                </pancake:PancakeView.GestureRecognizers>
                <controls:IconView
                    Margin="9"
                    Foreground="{StaticResource WhiteColor}"
                    HeightRequest="12"
                    HorizontalOptions="End"
                    Source="ic_distance2.png"
                    VerticalOptions="Center"
                    WidthRequest="12" />
            </pancake:PancakeView>
        </Grid>
        <BoxView
            Grid.Row="1"
            BackgroundColor="{StaticResource GrayColor}"
            HeightRequest="0.5"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="Start" />
        <Grid Grid.Row="2" Padding="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <controls:IconView
                Grid.Row="0"
                Grid.Column="0"
                Foreground="{StaticResource PrimaryColor}"
                HeightRequest="20"
                HorizontalOptions="Center"
                Source="ic_time24.png"
                VerticalOptions="Center"
                WidthRequest="20" />
            <StackLayout
                Grid.Row="0"
                Grid.Column="1"
                Orientation="Horizontal"
                VerticalOptions="Center">
                <Label Text="{Binding CarActive.VehicleTime, Converter={StaticResource DateTimeConverter}}" />
                <Label Text="{Binding CarActive.LostGSMTime, Converter={StaticResource SecondsToStringConverter}, StringFormat='{}({0})'}" />
            </StackLayout>
        </Grid>
        <BoxView
            Grid.Row="3"
            BackgroundColor="{StaticResource GrayColor}"
            HeightRequest="0.5"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="Start" />
        <Grid Grid.Row="4" Padding="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <controls:IconView
                Grid.Row="0"
                Grid.Column="0"
                Foreground="{StaticResource PrimaryColor}"
                HeightRequest="20"
                HorizontalOptions="Center"
                Source="ic_coordinates.png"
                VerticalOptions="Center"
                WidthRequest="20" />
            <StackLayout
                Grid.Row="0"
                Grid.Column="1"
                Orientation="Horizontal">
                <Label Text="{Binding CurrentAddress}" />
            </StackLayout>
        </Grid>
        <BoxView
            Grid.Row="5"
            BackgroundColor="{StaticResource GrayColor}"
            HeightRequest="0.5"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="Start" />
        <Grid Grid.Row="6" Padding="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <controls:IconView
                    Grid.Row="0"
                    Grid.Column="0"
                    Foreground="{StaticResource PrimaryColor}"
                    HeightRequest="20"
                    HorizontalOptions="Center"
                    Source="ic_speed.png"
                    VerticalOptions="Center"
                    WidthRequest="20" />
                <StackLayout
                    Grid.Row="0"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    VerticalOptions="Center">
                    <Label Text="{Binding CarActive.Velocity, Converter={StaticResource NMConverter}, ConverterParameter={i18n:TranslateResource Common_Lable_NMUnit}}" />
                </StackLayout>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <controls:IconView
                    Grid.Row="0"
                    Grid.Column="0"
                    Foreground="{StaticResource PrimaryColor}"
                    HeightRequest="20"
                    HorizontalOptions="Center"
                    Source="ic_distance.png"
                    VerticalOptions="Center"
                    WidthRequest="20" />

                <StackLayout
                    Grid.Row="0"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    VerticalOptions="Center">
                    <Label Text="{Binding CarActive.TotalKm, Converter={StaticResource NMConverter}, ConverterParameter={i18n:TranslateResource Online_Label_TotalKm}}" />
                </StackLayout>
            </Grid>
        </Grid>
        <BoxView
            Grid.Row="7"
            BackgroundColor="{StaticResource GrayColor}"
            HeightRequest="0.5"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="Start" />
        <Grid Grid.Row="8" Padding="10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                BackgroundColor="{StaticResource PrimaryColor}"
                BorderRadius="20"
                Command="{Binding PushToRouterPageCommand}"
                FontAttributes="Bold"
                FontSize="10"
                HeightRequest="35"
                Text="{i18n:TranslateResource Route_Label_TitleVMS}"
                TextColor="{StaticResource WhiteColor}" />
            <Button
                Grid.Column="1"
                BackgroundColor="{StaticResource PrimaryColor}"
                BorderRadius="20"
                Command="{Binding PushToServicePackHistoryPageCommand}"
                FontAttributes="Bold"
                FontSize="10"
                HeightRequest="35"
                Text="Phí phương tiện"
                TextColor="{StaticResource WhiteColor}" />
            <Button
                Grid.Column="2"
                BackgroundColor="{StaticResource PrimaryColor}"
                BorderRadius="20"
                Command="{Binding PushToDetailPageCommand}"
                FontAttributes="Bold"
                FontSize="10"
                HeightRequest="35"
                Text="{i18n:TranslateResource Online_Button_Detail}"
                TextColor="{StaticResource WhiteColor}" />
        </Grid>
    </Grid>
</sharpnado:MaterialFrame>