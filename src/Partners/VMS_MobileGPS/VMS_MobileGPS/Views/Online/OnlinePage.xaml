<?xml version="1.0" encoding="utf-8" ?>
    
<ScrollView
    x:Class="VMS_MobileGPS.Views.OnlinePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:animation="clr-namespace:BA_MobileGPS.Core.Behaviors;assembly=BA_MobileGPS.Core"
    xmlns:cluster="clr-namespace:BA_MobileGPS.Core;assembly=BA_MobileGPS.Core"
    xmlns:controls="clr-namespace:BA_MobileGPS.Core.Controls;assembly=BA_MobileGPS.Core"
    xmlns:effect="clr-namespace:BA_MobileGPS.Core.Effects;assembly=BA_MobileGPS.Core"
    xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:prism="http://prismlibrary.com"
    prism:ViewModelLocator.AutowireViewModel="True">
    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid
            Padding="15,5"
            BackgroundColor="{AppThemeBinding Light={StaticResource LightPrimaryOtherColor},
                                              Dark={StaticResource DarkPrimaryOtherColor}}"
            HeightRequest="100">
            <StackLayout
                HeightRequest="35"
                Orientation="Horizontal"
                VerticalOptions="End">
                <controls:IconView Source="hotline_Icon.png" StyleClass="TopIconView">
                    <controls:IconView.Behaviors>
                        <animation:ViewTappedBehavior AnimationType="Scale" />
                    </controls:IconView.Behaviors>
                    <controls:IconView.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding HotlineTapCommand}" NumberOfTapsRequired="1" />
                    </controls:IconView.GestureRecognizers>
                </controls:IconView>
            </StackLayout>
            <StackLayout
                HeightRequest="35"
                HorizontalOptions="EndAndExpand"
                Orientation="Horizontal"
                Spacing="10"
                VerticalOptions="End">
                <controls:IconView Source="company_Icon.png" StyleClass="TopIconView">
                    <controls:IconView.Behaviors>
                        <animation:ViewTappedBehavior AnimationType="Scale" />
                    </controls:IconView.Behaviors>
                </controls:IconView>
                <controls:IconView Source="messenger_Icon.png" StyleClass="TopIconView">
                    <controls:IconView.Behaviors>
                        <animation:ViewTappedBehavior AnimationType="Scale" />
                    </controls:IconView.Behaviors>
                </controls:IconView>
                <controls:IconView Source="notification_Icon.png" StyleClass="TopIconView">
                    <controls:IconView.Behaviors>
                        <animation:ViewTappedBehavior AnimationType="Scale" />
                    </controls:IconView.Behaviors>
                </controls:IconView>
            </StackLayout>
        </Grid>

        <cluster:Map
            x:Name="googleMap"
            Grid.Row="1"
            MapType="Hybrid">
            <cluster:Map.Triggers>
                <DataTrigger
                    Binding="{Binding Source={x:Reference botGroup}, Path=Margin}"
                    TargetType="cluster:Map"
                    Value="15,30,15,130">
                    <Setter Property="Margin" Value="0,0,0,110" />
                </DataTrigger>
                <DataTrigger
                    Binding="{Binding Source={x:Reference botGroup}, Path=Margin}"
                    TargetType="cluster:Map"
                    Value="15,30">
                    <Setter Property="Margin" Value="0" />
                </DataTrigger>
            </cluster:Map.Triggers>
        </cluster:Map>
        <!--  Khung search bar phía trên  -->
        <Grid
            Grid.Row="1"
            Margin="10"
            Padding="5,0"
            ColumnDefinitions="1*,Auto,Auto"
            ColumnSpacing="10"
            HeightRequest="45"
            VerticalOptions="StartAndExpand">
            <pancake:PancakeView
                Padding="0"
                BackgroundColor="{AppThemeBinding Light={StaticResource LightSecondaryOtherColor},
                                                  Dark={StaticResource DarkSecondaryOtherColor}}"
                CornerRadius="22">
                <StackLayout
                    Padding="0"
                    HorizontalOptions="FillAndExpand"
                    Orientation="Horizontal">
                    <pancake:PancakeView
                        BackgroundColor="{AppThemeBinding Light={StaticResource LightPrimaryOtherColor},
                                                          Dark={StaticResource DarkPrimaryOtherColor}}"
                        CornerRadius="22"
                        WidthRequest="45">
                        <controls:IconView
                            Margin="10"
                            Foreground="{AppThemeBinding Light={StaticResource LightSecondaryOtherColor},
                                                         Dark={StaticResource DarkSecondaryOtherColor}}"
                            Source="ic_search.png" />
                    </pancake:PancakeView>
                    <Entry
                        Margin="0,0,20,0"
                        HorizontalOptions="FillAndExpand"
                        Placeholder="Tìm kiếm phương tiện">
                        <Entry.Effects>
                            <effect:BorderlessEffect />
                        </Entry.Effects>
                    </Entry>
                </StackLayout>
            </pancake:PancakeView>
            <pancake:PancakeView
                Grid.Column="1"
                Padding="0"
                BackgroundColor="{AppThemeBinding Light={StaticResource LightSecondaryOtherColor},
                                                  Dark={StaticResource DarkSecondaryOtherColor}}"
                CornerRadius="22"
                WidthRequest="45">
                <controls:IconView
                    Margin="2,0,0,10"
                    Foreground="{AppThemeBinding Light={StaticResource LightPrimaryOtherColor},
                                                 Dark={StaticResource DarkPrimaryOtherColor}}"
                    Source="ic_doubleship.png"
                    VerticalOptions="Center" />
            </pancake:PancakeView>
            <pancake:PancakeView
                Grid.Column="2"
                BackgroundColor="{AppThemeBinding Light={StaticResource LightSecondaryOtherColor},
                                                  Dark={StaticResource DarkSecondaryOtherColor}}"
                CornerRadius="22"
                WidthRequest="45">
                <controls:IconView
                    Margin="8"
                    Foreground="{AppThemeBinding Light={StaticResource LightPrimaryOtherColor},
                                                 Dark={StaticResource DarkPrimaryOtherColor}}"
                    Source="ic_list.png" />
            </pancake:PancakeView>
        </Grid>
        <!--  Nhóm button góc dưới  -->
        <StackLayout
            x:Name="botGroup"
            Grid.Row="1"
            Margin="{Binding BottomGroupMargin}"
            HorizontalOptions="EndAndExpand"
            VerticalOptions="End">
            <pancake:PancakeView
                BackgroundColor="{AppThemeBinding Light={StaticResource LightSecondaryOtherColor},
                                                  Dark={StaticResource DarkSecondaryOtherColor}}"
                CornerRadius="25"
                HeightRequest="50"
                WidthRequest="50">
                <controls:IconView
                    Margin="5"
                    Foreground="{AppThemeBinding Light={StaticResource LightPrimaryOtherColor},
                                                 Dark={StaticResource DarkPrimaryOtherColor}}"
                    Source="ic_vector.png" />
            </pancake:PancakeView>
            <pancake:PancakeView
                Padding="0"
                BackgroundColor="{AppThemeBinding Light={StaticResource LightSecondaryOtherColor},
                                                  Dark={StaticResource DarkSecondaryOtherColor}}"
                CornerRadius="25"
                HeightRequest="50"
                WidthRequest="50">
                <controls:IconView
                    Margin="8"
                    Foreground="{AppThemeBinding Light={StaticResource LightPrimaryOtherColor},
                                                 Dark={StaticResource DarkPrimaryOtherColor}}"
                    HeightRequest="10"
                    Source="ic_group.png" />
            </pancake:PancakeView>
            <pancake:PancakeView
                BackgroundColor="{AppThemeBinding Light={StaticResource LightPrimaryOtherColor},
                                                  Dark={StaticResource DarkPrimaryOtherColor}}"
                CornerRadius="25"
                HeightRequest="50"
                WidthRequest="50">
                <controls:IconView
                    Margin="10"
                    Foreground="{AppThemeBinding Light={StaticResource LightSecondaryOtherColor},
                                                 Dark={StaticResource DarkSecondaryOtherColor}}"
                    Source="ic_rectange.png" />
            </pancake:PancakeView>
        </StackLayout>
    </Grid>
</ScrollView>